<div class='Container--noGutter'>
  <div class='AuthForm u-layoutPadT40'>
    <h1>Resend email confirmation</h1>

    <h2>Please Enter your email address</h2>

    <div class='row Section'>
      <div class='col-sm-4 col-sm-offset-4'>
        {{#form-group error=error}}
          {{debounced-input
            debounceWait=300
            value=email
            type='email'
            placeholder='Email Address'
            class='form-control'
          }}
        {{/form-group}}

        {{async-button
          action='reconfirm'
          default='Send Confirmation Email'
          pending='Sending Now'
          class='Button Button--primary btn u-layoutPadB40'
        }}
      </div>
      
    </div>
  </div>
</div>
