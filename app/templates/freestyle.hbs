{{#freestyle-guide
    title='UX3'
    subtitle='Living Style Guide'
}}

  {{#freestyle-section name='atoms' as |section|}}
      {{#freestyle-subsection name='Typography' section=section}}
        {{#freestyle-usage 'typography-proxima-nova' title='Proxima Nova'}}
          {{freestyle-typeface fontFamily='proxima-nova'}}
        {{/freestyle-usage}}
    {{/freestyle-subsection}}

    {{#freestyle-subsection name='Color' section=section}}
      {{#freestyle-usage 'fp' title='Freestyle Palette' usageTitle='Usage'}}
        {{freestyle-palette
            colorPalette=colorPalette
            title='Dummy App Color Palette'
            description='This component displays the color palette specified in freestyle/palette.json'
        }}
      {{/freestyle-usage}}
    {{/freestyle-subsection}}

    {{#freestyle-subsection name='Buttons' section=section}}
    {{/freestyle-subsection}}
  {{/freestyle-section}}

  {{#freestyle-section name='molecules' as |section|}}
    {{#freestyle-subsection name='Cards' section=section}}
      {{#freestyle-collection title='Cards yo' as |collection|}}
        {{#freestyle-variant collection=collection key='event'}}
          {{#freestyle-usage 'event-card' title='Event Card'}}
            {{event-card
              class='Card'
              event=(hash
                title='Yin Yoga with Kyle Barrett'
                venueName='Norwich Public Library'
                venueCity='Norwich'
                venueState='VT'
                imageUrl='https://placehold.it/400/300'
                formattedDate='Jul 1 | 8:00AM-3:00PM'
                registrationDeadline='05/30/2016'
              )}}
            {{/freestyle-usage}}
          {{/freestyle-variant}}

          {{#freestyle-variant collection=collection key='market'}}
            {{#freestyle-usage 'market-card' title='Market Card'}}
              {{market-card
                class='Card'
                post=(hash
                  title='Yin Yoga with Kyle Barrett'
                  venueName='Norwich Public Library'
                  venueCity='Norwich'
                  venueState='VT'
                  imageUrl='https://placehold.it/400/300'
                  formattedDate='Jul 1 | 8:00AM-3:00PM'
                  registrationDeadline='05/30/2016'
                )}}
            {{/freestyle-usage}}
          {{/freestyle-variant}}
        {{/freestyle-collection}}
    {{/freestyle-subsection}}
  {{/freestyle-section}}

  {{#freestyle-section name='organisms' as |section|}}
  {{/freestyle-section}}

{{/freestyle-guide}}
