{{#if model.bannerImage}}
  <section class='NewsPhotoBanner'>
    <div class='Container--noGutter NewsPhotoBanner-photoContainer'>
      {{#background-image imageUrl=model.bannerImage.url class='NewsPhotoBanner-photo'}}
        <div class='NewsPhotoBanner-captionArea'>
          {{model.bannerImage.caption}} / Source: {{model.bannerImage.credit}}
        </div>
      {{/background-image}}
    </div>
  </section>
{{/if}}

<div class='Container--noGutter News'>
  <div class='row'>
    <div class='col-sm-2 hidden-xs'>
      {{#unless isPreview}}
        {{back-button routeName='news'}}
      {{/unless}}
    </div>

    <div class='col-sm-8'>
      <h1 class='News-title'>{{model.title}}</h1>
      <h3 class='News-subtitle'>{{model.subtitle}}</h3>
      <div class='News-publicationInfo'>{{model.publicationName}} : {{model.authorName}}</div>
      <div class='News-publicationDate'>{{model.formattedPublishedAt}}</div>
      <div class='News-content ContentText'>{{model.content}}</div>

      {{partial 'partials/related-promotion'}}
    </div>

    <div class='col-sm-2'>
      {{social-share}}

      {{report-content-details contentId=model.contentId}}
    </div>
  </div>

  <h1 class='SectionHeader SectionHeader--paddedTop'>
    <span class='SectionHeader-text'>
      The Conversation
    </span>
  </h1>
  <div class='row'>
    {{content-comments
        contentTitle=model.title
        contentId=model.contentId
        commentingDisabled=model.isNew
      }}
  </div>
</div>
