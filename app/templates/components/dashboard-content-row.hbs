<td data-test-content-row>
    {{#if isTalkOrComment}}
      {{#link-to viewRoute viewId (query-params scrollTo=contentAnchor)}}
        {{x-truncate text=content.title maxLength=50}}
      {{/link-to}}
    {{else if isPromotion}}
      {{x-truncate text=content.title maxLength=50}}
    {{else if (eq type 'news')}}
      {{#if hasTitle}}
        {{x-truncate text=content.title maxLength=50}}
      {{else}}
        Untitled Draft
      {{/if}}
    {{else}}
      {{#link-to viewRoute content.id}}
        {{x-truncate text=content.title maxLength=50}}
      {{/link-to}}
    {{/if}}
</td>
{{#if showTypeColumn}}
  <td class='hidden-xs hidden-sm'>{{contentType}}</td>
{{/if}}
<td class='{{if media.isMobile 'u-textPullRight'}}'>{{if publishedAt publishedAt 'Draft'}}</td>
<td class='hidden-xs'>{{content.views}}</td>
<td class='hidden-xs'>{{content.comments}}</td>
<td class='hidden-xs' colspan='2'>
  {{#link-to 'content-metrics.show' content.contentId class='btn btn-link h4'}}
    <span {{action 'trackEvent' 'selectNavControl' 'Metrics Button'}}>
      Metrics
    </span>
  {{/link-to}}

  {{#if isEditable}}
    {{#link-to editRoute editId class='btn btn-link h4'}}
      <span {{action 'trackEvent' 'selectNavControl' 'Edit Button'}}>
        Edit
      </span>
    {{/link-to}}
  {{/if}}
</td>
