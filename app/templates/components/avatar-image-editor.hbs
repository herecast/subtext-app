{{#content-form-image
  image=currentUser.image
  imageUrl=currentUser.userImageUrl
  originalImageFile=currentUser.originalImageFile
  error=errors.image
  displayCropper=isEditingImage as |tempImage|
}}
  {{#if tempImage}}
    {{async-button
      action='savePhoto'
      default='Save Photo'
      pending='Savingâ€¦'
      class='h2 Button Button--primary'
    }}
  {{else}}
    {{#if currentUser.userImageUrl}}
      <img src='{{currentUser.userImageUrl}}' class='Dashboard-avatar'>
    {{else}}
      <img src='/images/user-default-avatar.svg' class='Dashboard-avatar'>
    {{/if}}
    <a href='#' {{action 'changePhoto'}} class='h2 u-textUnderline'>
      Change Photo
    </a>
  {{/if}}
{{/content-form-image}}
