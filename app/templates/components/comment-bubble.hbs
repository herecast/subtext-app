{{#if isNews}}
  <img class='img-responsive' src='/images/comment-bubble-news.svg'>
{{else if isTalk}}
  <img class='img-responsive' src='/images/comment-bubble-talk.svg'>
{{else if isEvent}}
  <img class='img-responsive' src='/images/comment-bubble-event.svg'>
{{/if}}

<div class='CommentBubble-content'>
  <a href='#' {{action 'scrollToComments'}}>
    <div class='CommentBubble-contentCount'>
      {{count}}
    </div>

    <div class='CommentBubble-contentLabel'>
      {{commentLabel}}
    </div>
  </a>
</div>
