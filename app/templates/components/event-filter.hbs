<div class='Container--noGutter'>
  <!-- Brand and toggle get grouped for better mobile display -->
  <div class='FilterBar-collapse'>
    <form class='FilterBar-form navbar-form navbar-left' role='search' {{action 'submit' on='submit'}}>
      <div class='form-group'>
        <span class='FilterBar-text'>{{fa-icon 'search'}} Show me</span>
        {{event-category-filter
          category=category
          query=query
          class='FilterBar-filter FilterBar-categoryFilter'
          submit='submit'
        }}
      </div>
      <div class='form-group'>
        <span class='FilterBar-text'>in</span>
        {{event-location-filter
          location=location
          class='FilterBar-filter'
          submit='submit'
        }}
      </div>
      <div class='form-group'>
        {{event-date-filter
          startDate=startDate
          stopDate=stopDate
          submit='submit'
        }}
      </div>
    </form>
  </div>
</div><!-- /.container-fluid -->
