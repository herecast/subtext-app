<div class='container-fluid'>
  <!-- Brand and toggle get grouped for better mobile display -->
  <div class='navbar-header'>
    <button type='button' class='navbar-toggle collapsed' data-toggle='collapse' data-target='#js-filter-bar'>
      <span class='sr-only'>Toggle navigation</span>
      <span class='icon-bar'></span>
      <span class='icon-bar'></span>
      <span class='icon-bar'></span>
    </button>
  </div>
  <div class='collapse navbar-collapse'>
    <form class='navbar-form navbar-left' role='search'>
      <div class='form-group'>
        {{event-category-filter category=category}}
      </div>
      <div class='form-group'>
        <p class='navbar-text'>within</p>
      </div>
      <div class='form-group'>
        {{event-location-filter location=location}}
      </div>
      <div class='form-group'>
        <p class='navbar-text'>happening</p>
      </div>
      <div class='form-group'>
        {{event-date-filter startDate=startDate stopDate=stopDate}}
      </div>

      <button type='submit' class='btn btn-default' {{action 'submit'}}>
        Find events
      </button>
    </form>
  </div>
</div><!-- /.container-fluid -->
