<label class="control-label ContentForm-label--required">Location</label>
{{form-error error}}
{{#if venueId}}
  <div>
    <div>{{venueName}}</div>
    <div>{{venueAddress}}</div>
    <div>{{venueCity}}, {{venueState}} {{venueZip}}</div>
    <button class="EventFormVenue-editButton InlineEdit-editButton" {{action "changeVenue"}}>
      {{fa-icon "pencil"}}
      Edit
    </button>
  </div>
{{else}}
  {{event-form-venue-name
    venueName=venueName
    venues=venues
    setVenue=(action "setVenue")
    class="form-group"
    addNewVenue=(action "showNewVenueForm")
  }}

  {{#if showNewVenueForm}}
    <div class="form-group">
      <div class="checkbox">
        <label>
          {{input
            type="checkbox"
            checked=isPrivate
            change=(action "togglePrivacy" isPrivate)
          }}
          This is a private residence
        </label>
      </div>

      {{#if isPrivate}}
        <p>
          Selecting Private will prevent other users from selecting this location
          for events. You might select Private for a yard sale. You will always be
          able to see a Private venue that you created.
        </p>
      {{/if}}
    </div>
    <div class="form-group">
      {{input
        placeholder="Address"
        class="form-control"
        value=venueAddress
        input=(action "validateForm")
      }}
    </div>
    <div class="row">
      <div class="form-group col-xs-5">
        {{input
          placeholder="City"
          class="form-control"
          value=venueCity
          input=(action "validateForm")
        }}
      </div>
      <div class="form-group col-xs-4">
        {{input
          placeholder="State"
          class="form-control"
          value=venueState
          maxlength=2
          input=(action "validateForm")
        }}
        <p class="help-block">State Abbreviation. example: <strong>VT</strong></p>
      </div>
      <div class="form-group col-xs-3">
        {{input
          placeholder="ZIP Code"
          class="form-control"
          value=venueZip
          input=(action "validateForm")
        }}
      </div>
    </div>
    <div class="form-group">
      {{input
        placeholder="Venue Website URL"
        class="form-control"
        value=venueUrl
        input=(action "validateForm")
      }}
    </div>
  {{/if}}
{{/if}}
