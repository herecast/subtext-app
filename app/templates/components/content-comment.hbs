{{#media-container as |media|}}
  {{#media.object}}
    {{avatar-image
      imageUrl=comment.userImageUrl
      userName=comment.userName
    }}
  {{/media.object}}
  {{#media.content}}
    {{{comment.content}}}
    {{#text-block lighten=true small=true}}
      {{comment.userName}}
      &bull;
      {{comment.formattedPostedAt}}
      &bull;
      {{report-abuse
        contentId=comment.contentId
        tagName='span'
      }}
    {{/text-block}}
  {{/media.content}}
{{/media-container}}
