{{input
  placeholder='Search term'
  class='Dropdown-input FilterBar-input FilterBar--news dropdown-toggle u-textTruncate'
  value=inputValue
  data-toggle='dropdown'
  aria-expanded='false'
}}

<ul class='dropdown-menu' role='menu'>
  <li>
    <a href='#' {{action 'customSearch'}} tabindex='-1'>
      {{fa-icon 'search'}} <i>Custom Search</i>
    </a>
  </li>

  <li role="presentation" class="divider"></li>

  <li>
    <a href='#' {{action 'setPublication' 'Everyone'}} tabindex='-1'>
      Everyone
    </a>
  </li>

  {{#if hasPerformedSearch}}
    <li role="presentation" class="divider"></li>

    {{#if isSearching}}
      <li class='disabled'>
        <a tabindex='-1'>{{fa-icon 'spinner fa-spin'}} Searching&hellip;</a>
      </li>
    {{else}}
      {{#each publications as |publication|}}
        <li><a href='#' {{action 'setPublication' publication}} tabindex='-1'>{{publication}}</a></li>
      {{else}}
        <li class='disabled'><a tabindex='-1'>No Search Results</a></li>
      {{/each}}

    {{/if}}
  {{/if}}
</ul>
