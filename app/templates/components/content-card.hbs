{{#if isTalk}}
  {{talk-card
    talk=item
    isContentCard=true
    isSimilarContent=isSimilarContent
    sourceContentId=sourceContentId
    class='Card Card--narrow'
  }}

{{else if isNews}}
  {{news-card
    item=item
    imagePosition='right'
    isSimilarContent=isSimilarContent
    sourceContentId=sourceContentId
  }}

{{else if isMarketPost}}
  {{market-card
    post=item
    imagePosition='right'
    class='Card'
    isSimilarContent=isSimilarContent
    sourceContentId=sourceContentId
  }}

{{else if isEventInstance}}
  {{event-card
    event=item
    imagePosition='right'
    class='Card u-flexColumn'
    isSimilarContent=isSimilarContent
    sourceContentId=sourceContentId
  }}
{{/if}}
