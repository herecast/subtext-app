{{#if isTalk}}
  {{#if showLink}}
    {{#link-to 'talk'}}
      <h6>talk</h6>
    {{/link-to}}
  {{/if}}

  {{talk-card
    talk=item
    isContentCard=true
    isSimilarContent=isSimilarContent
    class='Card TalkCard u-flexColumn-2 TalkCard TalkCard--narrow'
  }}
{{else if isNews}}
  {{#if showLink}}
    {{#link-to 'news'}}
      <h6>news</h6>
    {{/link-to}}
  {{/if}}

  {{news-card item=item}}
{{else if isMarketPost}}
  {{#if showLink}}
    {{#link-to 'market'}}
      <h6>market</h6>
    {{/link-to}}
  {{/if}}

  {{market-card
    post=item
    class='Card MarketCard u-flexColumn-2'
  }}
{{else if isEventInstance}}
  {{#if showLink}}
    {{#link-to 'events'}}
      <h6>events</h6>
    {{/link-to}}
  {{/if}}

  {{event-card
    event=item
    class='Card EventCard u-flexColumn'
  }}
{{/if}}
