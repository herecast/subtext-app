{{#each eventGroup in groupedEvents}}
  <div class='container'>
    {{link-to
      eventGroup.displayValue
      'events.index'
      (query-params startDate=eventGroup.paramValue stopDate=eventGroup.paramValue r=true)
      tagName='h1'
      class='EventGroup-header'
    }}

    <div class='row'>
      {{#each event in eventGroup.headItems}}
        <div class='col-sm-4 col-md-3'>
          {{event-card
            event=event
            category=category
            query=query
            startDate=startDate
            stopDate=stopDate
            location=location
          }}
        </div>
      {{/each}}
      {{#each event in eventGroup.tailItems}}
        <div class='col-sm-4 col-md-3 {{if eventGroup.tailHidden 'hidden'}}'>
          {{event-card
            event=event
            category=category
            query=query
            startDate=startDate
            stopDate=stopDate
            location=location
          }}
        </div>
      {{/each}}
    </div>

    {{#if eventGroup.hasHiddenTailItems}}
      <a href='#' {{action 'showTail' eventGroup}}>
        Show all {{eventGroup.length}} events happening on {{eventGroup.displayValue}}
      </a>
    {{/if}}
  </div>
{{/each}}
