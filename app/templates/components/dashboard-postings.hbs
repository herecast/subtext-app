<h1 class='SectionHeader'>
  <span class='SectionHeader-text SectionHeader-text--secondaryBg'>
    My Postings
  </span>
</h1>

<div class='Section'>
  <table class='ContentTable'>
    <thead>
      <tr class='h4'>
        <th class='ContentTable-name'>
          {{#link-to 'dashboard' (query-params sort=nameParam sorted=true)}}
            Name

            {{#if sortedByName}}
              {{fa-icon 'caret-down'}}
            {{/if}}
          {{/link-to}}
        </th>
        <th class='u-textCentered'>
          {{#link-to 'dashboard' (query-params sort=typeParam sorted=true)}}
            Type

            {{#if sortedByType}}
              {{fa-icon 'caret-down'}}
            {{/if}}
          {{/link-to}}
        </th>
        <th class='u-textCentered'>
          {{#link-to 'dashboard' (query-params sort=dateParam sorted=true)}}
            Date

            {{#if sortedByDate}}
              {{fa-icon 'caret-down'}}
            {{/if}}
          {{/link-to}}
        </th>
        <th class='u-textCentered'>
          {{#link-to 'dashboard' (query-params sort=viewsParam sorted=true)}}
            Views

            {{#if sortedByViews}}
              {{fa-icon 'caret-down'}}
            {{/if}}
          {{/link-to}}
        </th>
        <th class='u-textCentered'>
          {{#link-to 'dashboard' (query-params sort=commentsParam sorted=true)}}
            Comments

            {{#if sortedByComments}}
              {{fa-icon 'caret-down'}}
            {{/if}}
          {{/link-to}}
        </th>
        <th class='u-textCentered' colspan='2'>&nbsp;</th>
      </tr>
    </thead>
    <tbody>
      {{#each postings as |content|}}
        {{dashboard-content-row
          content=content
          type=content.contentType
        }}
      {{/each}}
    </tbody>
  </table>
</div>
