{{#if showConfirmation}}
  <div data-test-password-reset-request-confirmation>Thank you.  A link has been sent to the provided e-mail address with a link for resetting your password.</div>
{{else}}
  <div class='form-group'>
    {{input type='email' value=email class='form-control' data-test-component='password-reset-request-form-email'}}
  </div>
  <button {{action 'submit'}} data-test-component='password-reset-request-form-submit'>Submit</button>
{{/if}}
