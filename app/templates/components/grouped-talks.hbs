{{#each groupedTalks as |group|}}
  <div class='container'>
    <h1 class='SectionHeader'>
      <span class='SectionHeader-text SectionHeader-text--secondaryBg'>
        {{group.displayValue}}
      </span>
    </h1>

    <div class='row Section'>
      {{#each group.items as |talk|}}
        <div class='col-sm-6 col-md-4 col-lg-3'>
          {{talk-card talk=talk}}
        </div>
      {{/each}}
    </div>
  </div>
{{/each}}
