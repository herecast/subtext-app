{{#if event.imageUrl}}
  <img src='{{event.imageUrl}}' class='img-responsive Card-image'>
{{else}}
  <img src='http://placehold.it/75x75' class='img-responsive Card-image'>
{{/if}}
<div class='Card-time'>{{timeRange}}</div>
<a class='Card-title'>
  {{x-truncate text=title maxLength=35}}
</a>
<div class='Card-content hidden-xs'>
  {{x-truncate text=content maxLength=90}}
</div>
<a class='Card-learnMore Card-link'>
  Learn more
  {{fa-icon 'arrow-right'}}
</a>
<div class='Card-locationWhere hidden-xs'>Where?</div>
<div class='Card-locationName hidden-xs'>{{venueName}}</div>
<div class='Card-locationAddress hidden-xs'>{{venueAddress}}</div>
<div class='Card-locationRegion'>
  {{venueCity}}, {{venueState}}
  <span class='Card-locationZipCode hidden-xs'>{{venueZipcode}}</span>
</div>

<a href='{{event.directionsUrl}}' target='_blank' class='Card-getThere Card-link hidden-xs'>
  {{fa-icon 'map-marker'}}
  Get directions
</a>

<div class='Card-cost hidden-xs'>
  <span class='Card-costLabel'>Cost</span>
  <span class='Card-costValue'>{{event.cost}}</span>
</div>
