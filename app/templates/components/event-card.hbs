{{#if minimal}}
  <h2 class='Card-title' {{action 'onTitleClick'}}>
    {{#link-to 'events.show' eventId classNameBindings="isSimilarContent:SimilarContentLink"}}
      {{title}}
    {{/link-to}}
  </h2>

  {{#if timeRange}}
    <span>{{fa-icon 'clock-o'}} {{timeRange}}</span>
  {{/if}}

  {{#if hasVenue}}
    <span>{{fa-icon 'map-marker'}} {{x-truncate text=venue maxLength=40 tagName='span'}}</span>
  {{/if}}

  <span>Fee: {{event.costType}}</span>
{{else}}
  {{#if (and media.isNotMobile (eq variant 'wide'))}}
    <div class="media">
      <div class="media-body Card-body">
        {{#if isPreview}}
          <h2 class="media-heading Card-title">{{title}}</h2>
        {{else}}
          <h2 class='media-heading Card-title' {{action 'onTitleClick'}}>
            {{#link-to 'events.show' eventId classNameBindings="isSimilarContent:SimilarContentLink"}}
                {{title}}
            {{/link-to}}
          </h2>
        {{/if}}

        {{#if hasVenue}}
          {{#if media.isNotMobile}}
            {{fa-icon 'map-marker'}} <span>{{venue}}</span><br />
          {{else}}
            <p class='h5'>
              {{fa-icon 'map-marker'}} {{x-truncate text=venue maxLength=22 tagName='span'}}
            </p>
          {{/if}}
        {{/if}}

        <p class='h5'>{{event.costType}}</p>

        {{#if event.registrationDeadline}}
          <p class='Card-infoBanner'>
            Register by {{event.formattedRegistrationDeadline}}
          </p>
        {{/if}}

      </div>

      <div class="media-right">
        {{#if event.imageUrl classNameBindings="isSimilarContent:SimilarContentLink"}}
          {{#link-to 'events.show' eventId}}
            <img src='{{event.imageUrl}}' class='media-object Card-image-tile'>
          {{/link-to}}
        {{/if}}
      </div>

    </div>

  {{else}}

    <div class="media">
      {{#unless (eq imagePosition 'right')}}
        <div class="media-left">
          {{#if event.imageUrl}}
            {{#link-to 'events.show' eventId}}
              <img src='{{event.imageUrl}}' class='media-object Card-image-tile'>
            {{/link-to}}
          {{else}}
            <div class="Card-image-placeholder">
              <div class='media-object Card-image-tile'></div>
            </div>
          {{/if}}
        </div>
      {{/unless}}

      <div class="media-body Card-body">
        {{#if isPreview}}
          <h2 class="media-heading Card-title">{{title}}</h2>
        {{else}}
          <h2 class='media-heading Card-title' {{action 'onTitleClick'}}>
            {{#link-to 'events.show' eventId}}
                {{title}}
            {{/link-to}}
          </h2>
        {{/if}}

        {{#if timeRange}}
          <p class='h5'>{{fa-icon 'clock-o'}} {{timeRange}}</p>
        {{/if}}

        {{#if hasVenue}}
          <p class='h5'>
            {{fa-icon 'map-marker'}} {{x-truncate text=venue maxLength=22 tagName='span'}}
          </p>
        {{/if}}

        <p class='h5'>{{event.costType}}</p>

        {{#if event.registrationDeadline}}
          <p class='Card-infoBanner h6'>
            <span class='Card-infoBanner-label'>Register by </span>{{event.formattedRegistrationDeadline}}
          </p>
        {{/if}}
      </div>

      {{#if (eq imagePosition 'right')}}
        <div class="media-right">
          {{#if event.imageUrl}}
            {{#link-to 'events.show' eventId}}
              <img src='{{event.imageUrl}}' class='media-object Card-image-tile'>
            {{/link-to}}
          {{else}}
            <div class="Card-image-placeholder">
              <div class='media-object Card-image-tile'></div>
            </div>
          {{/if}}
        </div>
      {{/if}}
    </div>
  {{/if}}
{{/if}}
