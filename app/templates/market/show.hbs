{{#if model.imageUrl}}
  <div class='MarketPost-imageContainer'>
    <div class='container'>
      <div class='row'>
        <div class='col-sm-8 col-sm-offset-2'>
          <img class='MarketPost-image img-responsive' src={{model.imageUrl}}>
        </div>
      </div>
    </div>
  </div>
{{/if}}

<div class='MarketPost container'>
  <div class='row'>
    <div class='col-sm-2 hidden-xs'>
      {{#unless isPreview}}
        {{back-button routeName='market'}}
      {{/unless}}
    </div>

    <div class='col-sm-8 u-layoutPadL40 u-layoutPadR40'>
      <h1 class='MarketPost-title DashedMobileContent'>{{model.title}}</h1>

      <h1 class='MarketPost-price visible-xs DashedMobileContent'>{{model.price}}</h1>

      <div class='MarketPost-content DashedMobileContent'>{{{model.content}}}</div>

      <h1 class='MarketPost-price hidden-xs'>{{model.price}}</h1>

      {{#if model.hasContactInfo}}
        {{market-contact postId=model.id}}
      {{/if}}

      {{partial 'partials/related-promotion'}}
    </div>

    <div class='col-sm-2 u-layoutMobilePadding0'>
      {{social-share}}

      {{report-content-details contentId=model.contentId}}

      {{#if model.canEdit}}
        {{edit-content-link
          id=model.id
          route='market.edit'
          text='Edit Listing'
        }}
      {{/if}}
    </div>
  </div>
</div>
