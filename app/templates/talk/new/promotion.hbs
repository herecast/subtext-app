<div class='Container--noGutter'>
  <div class='row'>
    {{#content-form
      isNew=model.isNew
      type='talk'
      class='col-md-9'
      step1State='complete'
      step2State='current'
      step3State='inactive'
    }}
      {{talk-promotion-form
        talk=model
        listservs=listservs
        afterDiscard='afterDiscard'
        backToDetails='backToDetails'
        afterPromotion='afterPromotion'
      }}
    {{/content-form}}

    <div class='col-md-3 hidden-sm'>
      <h1 class='ContentForm-previewHeader'>Preview</h1>
      {{talk-card-preview
        talk=model
        isPreview=true
      }}
    </div>
  </div>
</div>
