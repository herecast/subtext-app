<div class="Container--noGutter">
  <div class="row">
    {{#content-form
      isNew=model.isNew
      type="calendar"
      class="col-xs-12"
      step1State="current"
      step2State="inactive"
      step3State="inactive"
    }}
      {{event-form
        model=model
        afterDiscard="afterDiscard"
        afterDetails="afterDetails"
        formattedType="event"
      }}
    {{/content-form}}
  </div>
</div>
