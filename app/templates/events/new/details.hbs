<div class='Container--noGutter'>
  <div class='row'>
    {{#content-form type='event' classNames='col-md-9' }}
      {{event-form
        event=model
        afterDiscard='afterDiscard'
        afterDetails='afterDetails'
      }}
    {{/content-form}}

    <div class='col-md-3'>
      <h1 class='ContentForm-previewHeader'>Preview</h1>
      {{event-card-preview
        event=model
        isPreview=true
      }}
    </div>

  </div>
</div>
