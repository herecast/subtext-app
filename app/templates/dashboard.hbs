<div class='Container'>
  <div class='Dashboard row'>
    <div class='col-sm-6 col-sm-offset-3'>
      {{avatar-image-editor
        currentUser=currentUser
        class='u-layoutPadT50 u-layoutPadB30'
      }}

      {{inline-edit
        value=currentUser.name
        class='Dashboard-userName'
        action='submit'
      }}

      {{location-dropdown
        selectedLocationId=currentUser.locationId
        class='LocationDropdown'
        onUpdate='submit'
      }}

      <div class='InlineEdit'>
        {{input
          value=currentUser.email
          autoresize=true
          disabled=true
          class='InlineEdit-input u-layoutPadB30'
        }}
      </div>

      {{#if showPasswordForm}}
        {{password-reset
          userId=currentUser.userId
          onSubmit='togglePasswordForm'
        }}
      {{else}}
        <a href='#' {{action 'togglePasswordForm'}} class='h2 u-textUnderline'>
          Change Password
        </a>
      {{/if}}
    </div>
  </div>
</div>

<div class='u-colorBgSecondary'>
  <div class='Section'>
    {{dashboard-postings
      postings=model
      class='Container--noGutter'
      sort=sort
      sorted=sorted
    }}
  </div>

  <div class='Container--noGutter'>
    {{partial 'partials/pagination-nav'}}
  </div>
</div>
