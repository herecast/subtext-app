{{feed-card/title
  title=model.title
  model=model
  sold=model.sold
  showToggleSold=(and (readonly context.canManage) isNotTalk)
  onContentClick=(action "onContentClick")
}}

{{feed-card/image
  imageUrl=activeImageUrl
  caption=model.primaryImageCaption
  model=model
  onContentClick=(action "onContentClick")
}}

{{feed-card/attribution
  model=model
  showAnyViewCount=showAnyViewCount
  classNames="u-padding8"
}}

{{feed-card/footer
  model=model
  cost=model.cost
  showCost=true
  canManage=(readonly context.canManage)
  canEditIfAllowed=(readonly context.canEditIfAllowed)
  displayAsPublic=(readonly context.displayAsPublic)
  openPromotionMenu=(action "openPromotionMenu")
  editPath="market.edit"
  editPathId=model.id
}}

{{#if context.allowManageOnTile}}
  {{feed-card/manage
    model=model
    openPromotionMenu=(action "openPromotionMenu")
  }}
{{/if}}
