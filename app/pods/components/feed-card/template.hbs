{{component componentType
  model=model
  userLocation=userLocation
  sourceTag=model.baseLocationName
  isLoggedIn=isLoggedIn
  context=(hash
    canManage=(readonly canManage)
    canEditIfAllowed=(readonly canEditIfAllowed)
    displayAsPublic=(readonly displayAsPublic)
    promotionMenuOpen=(readonly promotionMenuOpen)
    openPromotionMenu=(action "openPromotionMenu")
    onContentClick=(action "onContentClick")
    hideComments=(readonly hideComments)
    condensedView=(readonly condensedView)
    linkToDetailIsActive=(readonly linkToDetailIsActive)
  )
}}

{{#if promotionMenuOpen}}
  {{promotion-menu
    organization=organization
    content=model
    close=(action "closePromotionMenu")
  }}
{{/if}}
