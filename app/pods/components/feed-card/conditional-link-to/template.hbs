{{#if useLink}}
  {{#if linkUrl}}
    <span {{action onContentClick}}>
      <a href="{{linkUrl}}" target="_blank">
        {{yield}}
      </a>
    </span>
  {{else}}
    <span {{action onContentClick}}>
      {{#link-to-content model}}
        {{yield}}
      {{/link-to-content}}
    </span>
  {{/if}}
{{else}}
  {{yield}}
{{/if}}
