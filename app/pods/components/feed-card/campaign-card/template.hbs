{{#if model.imageUrl}}
  {{#x-card}}

    {{feed-card/image
      imageUrl=model.imageUrl
      model=model
      useLink=true
      linkUrl=model.redirectUrl
      onContentClick=context.onContentClick
    }}

    {{#unless context.displayAsPublic}}
      {{feed-card/footer
        canEdit=false
        canManage=(readonly context.canManage)
        displayAsPublic=(readonly context.displayAsPublic)
        openPromotionMenu=(action context.openPromotionMenu)
      }}
    {{/unless}}
  {{/x-card}}
{{/if}}
