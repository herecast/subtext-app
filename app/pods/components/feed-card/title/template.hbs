{{#if showToggleSold}}
  <div class="FeedCard-Title-sold-toggle" {{action 'toggleSold'}}>
    {{#if sold}}
      {{fa-icon 'toggle-on' class="toggle-on"}}
      <div>Sold</div>
    {{else}}
      {{fa-icon 'toggle-off'}}
      <div>Not Sold</div>
    {{/if}}
  </div>
{{else if sold}}
  <div class="FeedCard-Title-sold-tag">
   Sold
  </div>
{{/if}}

<div class="FeedCard-Title-title" {{action onContentClick}} data-test-card-title>
  {{#feed-card/conditional-link-to
    useLink=linkToDetailIsActive
    model=model
  }}
    {{title}}
  {{/feed-card/conditional-link-to}}
</div>

{{#if condensedView}}
  <div class="FeedCard-Title-views-and-comments">
    <div class="FeedCard-Title-views" title="Content Views">
      {{fa-icon 'eye'}}{{viewCount}}
    </div>
    <div class="FeedCard-Title-comments" title="Content Comments">
      {{fa-icon 'comment-o'}}{{commentCount}}
    </div>
  </div>
{{/if}}
