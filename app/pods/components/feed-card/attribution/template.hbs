<div class="FeedCard-Attribution-author-wrap">
  <div class="FeedCard-Attribution-author-left">
    {{#feed-card/conditional-link-to
      useLink=hasLinkRouteName
      linkRouteName=linkRouteName
      linkId=linkId
    }}
      {{avatar-image
        imageUrl=avatarUrl
        userName=author
        customSize=40
      }}
    {{/feed-card/conditional-link-to}}
  </div>
  <div class="FeedCard-Attribution-author-right">
    <div class="FeedCard-Attribution-author">
      {{#feed-card/conditional-link-to
        useLink=hasLinkRouteName
        linkRouteName=linkRouteName
        linkId=linkId
      }}
        {{authorNameFormatted}}
      {{/feed-card/conditional-link-to}}
    </div>
    <div class="FeedCard-Attribution-posted-time">
      {{#unless isListserv}}
        Posted {{postedTime}}
      {{else}}
        Submitted {{postedTime}}
      {{/unless}}
    </div>
  </div>
</div>
