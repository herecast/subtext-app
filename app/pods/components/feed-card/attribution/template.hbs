<div class="FeedCard-Attribution-author-wrap {{unless noPadding 'u-paddingBottom8'}}">
  <div class="FeedCard-Attribution-author-left {{unless noPadding 'u-paddingLeft8'}}">
    {{#if hasLinkRouteName}}
      {{#link-to linkRouteName linkId}}
        {{avatar-image
          imageUrl=avatarUrl
          userName=author
          customSize=customSize
        }}
      {{/link-to}}
    {{else}}
      {{avatar-image
        imageUrl=avatarUrl
        userName=author
        customSize=customSize
      }}
    {{/if}}
  </div>
  <div class="FeedCard-Attribution-author-right">
    <div class="FeedCard-Attribution-author {{unless noPadding 'u-paddingLeft8'}}">
      {{#if hasLinkRouteName}}
        {{#link-to
          linkRouteName
          linkId
          data-test-link='organization-link'
        }}
          {{authorNameFormatted}}
        {{/link-to}}
      {{else}}
        {{authorNameFormatted}}
      {{/if}}
    </div>
    <div class="FeedCard-Attribution-posted-time {{unless noPadding 'u-paddingLeft8'}}">
      {{#if postedTime}}
        {{#unless isListserv}}
          Posted {{postedTime}}
        {{else}}
          Submitted {{postedTime}}
        {{/unless}}
      {{else}}
        Not yet published
      {{/if}}
    </div>
  </div>
</div>
