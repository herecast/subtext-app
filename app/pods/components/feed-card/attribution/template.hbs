<div class="FeedCard-Attribution-author-wrap">
  <div class="FeedCard-Attribution-author-left">
    {{#link-to linkRouteName linkId}}
      {{avatar-image
        imageUrl=avatarUrl
        userName=author
        customSize=40
      }}
    {{/link-to}}
  </div>
  <div class="FeedCard-Attribution-author-right">
    <div class="FeedCard-Attribution-author">
      {{#if hasLinkRouteName}}
        {{#link-to
          linkRouteName
          linkId
          data-test-link='organization-link'
        }}
          {{authorNameFormatted}}
        {{/link-to}}
      {{else}}
        {{authorNameFormatted}}
      {{/if}}
    </div>
    <div class="FeedCard-Attribution-posted-time">
      {{#unless isListserv}}
        Posted {{postedTime}}
      {{else}}
        Submitted {{postedTime}}
      {{/unless}}
    </div>
  </div>
</div>
