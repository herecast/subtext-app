<div class="FeedCard-Attribution-author-wrap u-paddingBottom8">
  <div class="FeedCard-Attribution-author-left u-paddingLeft8">
    {{#if hasLinkRouteName}}
      {{#link-to linkRouteName linkId}}
        {{avatar-image
          imageUrl=avatarUrl
          userName=author
          customSize=40
        }}
      {{/link-to}}
    {{else}}
      {{avatar-image
        imageUrl=avatarUrl
        userName=author
        customSize=40
      }}
    {{/if}}
  </div>
  <div class="FeedCard-Attribution-author-right">
    <div class="FeedCard-Attribution-author u-paddingLeft8">
      {{#if hasLinkRouteName}}
        {{#link-to
          linkRouteName
          linkId
          data-test-link='organization-link'
        }}
          {{authorNameFormatted}}
        {{/link-to}}
      {{else}}
        {{authorNameFormatted}}
      {{/if}}
    </div>
    <div class="FeedCard-Attribution-posted-time u-paddingLeft8">
      {{#if postedTime}}
        {{#unless isListserv}}
          Posted {{postedTime}}
        {{else}}
          Submitted {{postedTime}}
        {{/unless}}
      {{else}}
        Not yet published
      {{/if}}
    </div>
  </div>
</div>
