{{#if canEditContent}}
  <button
    {{action "editContent"}}
    class="XButton XButton--primary XButton--noMargin XButton--regular XButton--thin XButton--rounded"
    data-test-feed-card-edit-button
  >
    <span>
      {{#if isTransitioning}}
        {{fa-icon "cog" spin=true}} Loading
      {{else}}
        Edit
      {{/if}}
    </span>
  </button>
{{/if}}
