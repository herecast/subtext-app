<div class="JobsNavigation-wrapper">

  <div class="JobsNavigation-nav-button" onclick={{action "selectedMenuItem" "market"}} role="button">
    <div class="JobsNavigation-bubble" data-test-ugc-job-link data-test-link="market">
      {{fa-icon "tags"}}
    </div>
      <span>List in Market</span>
  </div>
  <div class="JobsNavigation-nav-button" onclick={{action "selectedMenuItem" "event"}} role="button">
    <div class="JobsNavigation-bubble" data-test-ugc-job-link data-test-link="event">
      {{fa-icon "calendar"}}
    </div>
      <span>List in Calendar</span>
  </div>

  {{#if canPublishNews}}
    <div class="JobsNavigation-nav-button" onclick={{action "selectedMenuItem" "news"}} role="button">
      {{#link-to "news.new"}}
        <div class="JobsNavigation-bubble" data-test-ugc-job-link data-test-link="news">
          {{fa-icon "pencil-square-o" class="offsetRight"}}
        </div>
        <span>Create a Post</span>
      {{/link-to}}
    </div>
  {{else}}
    <div class="JobsNavigation-nav-button" onclick={{action "selectedMenuItem" "createapage"}} role="button">
      {{#link-to "createapage"}}
        <div class="JobsNavigation-bubble" data-test-ugc-job-link data-test-link="createapage">
          {{fa-icon "pencil-square-o" class="offsetRight"}}
        </div>
        <span>Get Paid to Post</span>
      {{/link-to}}
    </div>
  {{/if}}

</div>

<div class="JobsNavigation-help-wrap">
  {{help-text}}
</div>
