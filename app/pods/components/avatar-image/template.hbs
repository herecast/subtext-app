{{#if imageUrl}}
  <img class='AvatarImage--image' style='{{customSizeStyle}}' src='{{imageUrl}}'>
{{else}}
  <div class='AvatarImage--default' style='background-color: {{avatarBackgroundColor}}; {{customSizeStyle}}' data-content='{{userInitials}}'></div>
{{/if}}

{{#if hasCaret}}
  <div class='AvatarImage--caret-wrap' style='{{customCaretStyle}}'>
    {{fa-icon 'caret-down'}}
  </div>
{{/if}}
