{{#if hasBlock}}
  {{yield this}}
{{else}}
  {{#x-async-button
    promiseAction=(action "loginWithFacebook")
    isDisabled=isDisabled
    class="btn btn-lg btn-block btn-social btn-facebook FacebookLoginButton"
  as |promise|}}
    {{fa-icon "facebook"}}
    {{#if promise.isPending}}
      {{pendingMessage}}
    {{else}}
      {{startMessage}}
    {{/if}}
  {{/x-async-button}}
{{/if}}
