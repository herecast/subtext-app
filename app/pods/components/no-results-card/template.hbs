{{#x-card}}
  {{#card-body center=true shortPadding=true}}
    {{#text-block large=true strong=true}}
      No results were found matching your criteria.<br>
      Try changing your search or expand the search area.
    {{/text-block}}

    {{#if hasBlock}}
      {{yield}}
    {{else}}
      {{#text-block}}
        {{x-link-to 'RESET MY FILTERS'
                    'feed'
                    (query-params page=1 type='' radius='10' query='')
                    size='medium'
        }}
      {{/text-block}}
    {{/if}}
  {{/card-body}}
{{/x-card}}
