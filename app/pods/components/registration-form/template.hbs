{{#if hasBlock}}
  {{yield (hash
    email-input=(component "atoms/form-input"
      value=email
      type='email'
      class='form-control RegistrationForm-email'
      data-test-component='register-email-input'
    )

    name-input=(component "atoms/form-input"
      value=name
      class='form-control RegistrationForm-name'
      data-test-component='register-name-input'
    )

    location-input=(component "location-dropdown"
      selectedLocationId=locationId
      isEditing=true
      class="RegistrationForm-location"
    )

    password-input=(component "atoms/form-input"
      value=password
      type='password'
      class='form-control RegistrationForm-password'
      data-test-component='register-password-input'
    )

    accept-terms-input=(compnent "atoms/form-input"
      type="checkbox"
      checked=termsAccepted
      class='RegistrationForm-terms'
      data-test-component='register-terms'
    )

    submitAction=(action 'register')

    errors=error
  )}}
{{else}}
  {{#form-group error=error.locationId}}
    <label for='location'>Where do you live?</label>
    {{location-dropdown
      selectedLocationId=locationId
      isEditing=true
      class="RegistrationForm-location"
    }}
  {{/form-group}}

  {{#form-group error=error.name}}
    {{input
      value=name
      placeholder='Name'
      class='form-control RegistrationForm-name'
      data-test-component='register-name-input'
    }}
  {{/form-group}}

  {{#form-group error=error.email}}
    {{input
      value=email
      type='email'
      placeholder='Email Address'
      class='form-control RegistrationForm-email'
      data-test-component='register-email-input'
    }}
  {{/form-group}}

  {{#form-group error=error.password}}
    {{input
      value=password
      placeholder='Password'
      type='password'
      class='form-control RegistrationForm-password'
      data-test-component='register-password-input'
    }}
  {{/form-group}}

  {{#form-group class='u-textPullLeft' error=error.termsAccepted}}
    {{input
      type="checkbox"
      checked=termsAccepted
      class='RegistrationForm-terms'
      data-test-component='register-terms'
    }}

    <label for='terms' class='RegistrationForm-acceptTerms'>
      &nbsp;I agree to the {{#link-to 'terms' target='_blank'}}Terms of Service{{/link-to}} and {{#link-to 'privacy' target='_blank'}}Privacy Policy{{/link-to}}
    </label>
  {{/form-group}}

  <div class='form-actions'>
    {{async-button
      action=(action 'register')
      default='Join'
      pending='Joining'
      class='Button Button--primary RegistrationForm-submitAction'
      data-test-component='register-submit-button'
    }}
  </div>
{{/if}}
