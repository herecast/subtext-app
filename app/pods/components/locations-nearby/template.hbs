{{#if hasBlock}}
  {{yield (hash
            showActiveLocations=(action 'showActiveLocations')
            radius=radius
            location=location
            nearbyLocations=nearbyLocations
          )
  }}
{{else}}
  {{#text-block small=true lighten=true}}
    {{#if isMyStuffOnly}}
      Viewing my stuff only.
    {{else}}
      Viewing content for {{location.name}}
      {{#if (gt radius 0)}}
        {{#if nearbyLocations}}
          and
          {{#x-button style='link' strong=true onClick=(action 'showActiveLocations')}}
            {{nearestTowns}} towns within {{radius}} miles.
          {{/x-button}}
        {{/if}}
      {{else}}
        only.
      {{/if}}
    {{/if}}
  {{/text-block}}
{{/if}}
