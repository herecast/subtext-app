{{#modal-wrapper class='UserMenuModal' showHeader=false close=(action 'close')}}
  <div class="Modal-dialogHeader">
    <button class="Modal-action Modal-actionClose" {{action 'close'}}>
      Ã—
    </button>
    <span class='UserMenu-user  Modal-dialogHeader-block'>
      {{avatar-image
      imageUrl=currentUser.userImageUrl
      userName=currentUser.name
      customSize=26
      }}
      <span class='UserMenu-avatarText'>{{currentUser.name}}</span>
    </span>
  </div>

  <nav class="UserMenuModal-topNav">
    <div class="UserMenuModal-topNav-item">
      {{#link-to 'account'}}
        {{fa-icon 'user'}} My Account
      {{/link-to}}
    </div>
    <div class="UserMenuModal-topNav-item">
      <button class='UserMenuModal-signOut' {{action 'signOut'}}>
        {{fa-icon 'sign-out'}} Sign Out
      </button>
    </div>
  </nav>

  <div class='UserMenuModal-main'>
    {{user-menu-identity-switcher
    user=currentUser
    organizations=currentUser.managedOrganizations
    openDashboard=(action 'openDashboard')
    }}
  </div>
{{/modal-wrapper}}
