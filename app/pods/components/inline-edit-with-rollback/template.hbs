{{#if displayWasGiven}}
  {{#inline-edit
      display=display
      didEnterEditMode=(action 'editModeEntered')
      willExitEditMode=(action mayExitEditMode)
      focusChangesState=false as |ie|}}
    {{yield (hash
      isEditing=ie.isEditing
      exitEditMode=(action ie.exitEditMode)
      enterEditMode=(action ie.enterEditMode)
      rollback=(action 'rollback' ie.exitEditMode)
      okButton=ie.okButton
      editButton=ie.editButton
      cancelButton=(component "atoms/standard-button"
        action=(action 'rollback' ie.exitEditMode)
        text="cancel"
        class="InlineEdit-button InlineEdit-button--cancel"
      )
    )}}
  {{/inline-edit}}
{{else}}
  {{#inline-edit
      didEnterEditMode=(action 'editModeEntered')
      willExitEditMode=(action mayExitEditMode)
      focusChangesState=false as |ie|}}
    {{yield (hash
      isEditing=ie.isEditing
      exitEditMode=(action ie.exitEditMode)
      enterEditMode=(action ie.enterEditMode)
      rollback=(action 'rollback' ie.exitEditMode)
      okButton=ie.okButton
      editButton=ie.editButton
      cancelButton=(component "atoms/standard-button"
        action=(action 'rollback' ie.exitEditMode)
        text="cancel"
        class="InlineEdit-button InlineEdit-button--cancel"
      )
    )}}
  {{/inline-edit}}
{{/if}}
