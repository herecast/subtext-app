{{#x-card}}

  {{#x-tabs size='small' as |tabs|}}
    {{#each contentTabsSorted as |contentTab|}}
      {{#tabs.button
        active=contentTab.isActive
        onClick=(action 'setActiveTab' contentTab.name)
        color=(if contentTab.isActive 'primary' 'medium-gray')
        style=(if contentTab.isActive 'regular' 'gray')
      }}
        {{contentTab.title}}
      {{/tabs.button}}
    {{/each}}
  {{/x-tabs}}

{{/x-card}}
