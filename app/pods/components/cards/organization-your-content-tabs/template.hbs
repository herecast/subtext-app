{{#x-card}}

  {{#card-body slimPadding=true}}
    {{#subtitle-text noMargin=true center=true strong=true}}Manage Your Content{{/subtitle-text}}
  {{/card-body}}

  {{#x-tabs color="neutral" size="x-small" as |tabs|}}
    {{#tabs.link-to "profile.all" (query-params show="everything" page=1)}}
      Everything
    {{/tabs.link-to}}
    {{#tabs.link-to "profile.all" (query-params show=null page=1)}}
      On page
    {{/tabs.link-to}}
    {{#tabs.link-to "profile.all" (query-params show="hidden" page=1)}}
      Hidden
    {{/tabs.link-to}}
    {{#tabs.link-to "profile.all" (query-params show="draft" page=1)}}
      Draft
    {{/tabs.link-to}}
  {{/x-tabs}}

  {{#card-body slimPadding=true}}
    {{#if (eq activeTab "everything")}}
      Showing everything that you"ve created, whether it"s hidden or not.
    {{else if (eq activeTab null)}}
      Showing all content that the public will see.
    {{else if (eq activeTab "hidden")}}
      Showing the posts that you"ve hidden from public view.
    {{else if (eq activeTab "draft")}}
      Showing drafts of content that are not visibile to the public until published.
    {{/if}}

  {{/card-body}}
{{/x-card}}
