{{#x-card}}

  {{#x-tabs color="neutral" size="x-small" as |tabs|}}
    {{#tabs.button active=isAboutTabActive onClick=(action "setActiveTab" "about")}}
      About
    {{/tabs.button}}
    {{#tabs.button active=isHoursTabActive onClick=(action "setActiveTab" "hours")}}
      Hours
    {{/tabs.button}}
  {{/x-tabs}}

  {{#card-body shortPadding=true}}
    {{#if isAboutTabActive}}
      {{truncate-text
        text=organization.description
        maxLength=(if media.isNotMobile 120 80)
        showToggleButton=true}}
    {{else if isHoursTabActive}}
      {{hours-list hours=organization.hours}}
    {{/if}}
  {{/card-body}}

{{/x-card}}
