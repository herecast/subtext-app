{{#x-card color=(if displayAsAdminIfAllowed 'default' 'warning')}}
  {{#card-body slimPadding=true center=true}}
    {{#if displayAsAdminIfAllowed}}
      You are a manager of this organization.
      {{#x-button onClick=(action 'toggleAdminCards') color='primary' style='link' size='medium'}}
        View as Public.
      {{/x-button}}
    {{else}}
      You are viewing this page as the public.
      {{#x-button onClick=(action 'toggleAdminCards') color='black' style='transparent' size='x-small' noPadding=true}}
        {{fa-icon 'close'}}
      {{/x-button}}
    {{/if}}
  {{/card-body}}
{{/x-card}}