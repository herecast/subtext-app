{{#link-to-content item}}
  {{#media-container as |media|}}
    <span class="MediaContainer--psuedo" {{action "trackClick" item}} role="button">
      {{#media.object}}
        <img src={{optimized-image-url item.imageUrl 40 30 true}} alt="Story Image">
      {{/media.object}}
      {{#media.content}}
        {{item.title}}
      {{/media.content}}
    </span>
  {{/media-container}}
{{/link-to-content}}
