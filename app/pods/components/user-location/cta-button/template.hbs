{{#x-button
   onClick=(action "toggleChangeLocation")
   color=color
   size="x-small"
   noMargin=true
 }}
  {{fa-icon "map-marker"}} Change your Location
{{/x-button}}

{{#if wantsToChangeLocation}}
  {{to-elsewhere
    named="global-modal"
    send=(component "user-location/chooser"
          modelLocationName=modelLocationName
          onClose=(action "toggleChangeLocation")
          )
  }}
{{/if}}
