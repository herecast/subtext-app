{{#radio-button
  class='EventForm-costTypeLabel'
  name='cost'
  value='free'
  groupValue=costType
  onChange=(action 'setCostType' 'free')}}
  &nbsp;Free
{{/radio-button}}

{{#radio-button
  class='EventForm-costTypeLabel'
  name='cost'
  value='paid'
  groupValue=costType
  onChange=(action 'setCostType' 'paid')}}
  &nbsp;Paid
{{/radio-button}}

{{#radio-button
  class='EventForm-costTypeLabel'
  name='cost'
  value='donation'
  groupValue=costType
  onChange=(action 'setCostType' 'donation')}}
  &nbsp;Donation
{{/radio-button}}

{{#radio-button
  class='EventForm-costTypeLabel'
  name='cost'
  value=''
  groupValue=costType onChange=(action 'setCostType' '')}}
  &nbsp;Not Applicable
{{/radio-button}}

{{#liquid-unless isNotApplicable class='disclose'}}
  {{input
    placeholder=costPlaceholder
    value=cost
    class='form-control notapplicable'
  }}
{{/liquid-unless}}
