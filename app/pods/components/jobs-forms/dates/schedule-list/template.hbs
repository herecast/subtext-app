{{#each displayedSchedules as |schedule|}}
    {{#if (eq schedule.repeats "once")}}
      {{jobs-forms/dates/schedule-list/date-single-summary
        validate=validate
        save=save
        schedule=schedule
        remove=removeSchedule
      }}
    {{else}}
      {{jobs-forms/dates/schedule-list/date-recurring-summary
        validate=validate
        save=save
        schedule=schedule
        remove=removeSchedule
        excludeEvent=(action "excludeEvent" schedule)
        includeEvent=(action "includeEvent" schedule)
      }}
    {{/if}}
{{/each}}
