<div class="SignIn-module">
  {{#content-body}}
    {{#text-block center=true}}
      {{#if alternateSignInMessage}}
        {{alternateSignInMessage}}
      {{else}}
        Log in or Sign up to share and discover what's
        happening around you.
      {{/if}}
    {{/text-block}}

    {{sign-in-or-register-with-password
      email=(mut email)
      tab=(mut signInModule)
      changeModule=(action "changeModule")
      afterAuthenticate=(action "afterAuthenticate")
    }}
  {{/content-body}}
</div>
