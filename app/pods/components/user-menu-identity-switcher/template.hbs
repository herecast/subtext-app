{{user-menu-identity-item
    name=user.name
    isUserAccount=true
    avatarUrl=user.userImageUrl
    buttonAction=(action openProfileOrMyStuff)
    titleAction=(action 'expandItem' user)
    expanded=(eq openItem user)
    data-test-component="user-menu-item"
}}

{{#each organizations as |org|}}
  {{user-menu-identity-item
      name=org.name
      avatarUrl=org.displayImageUrl
      isBlog=org.isBlog
      buttonAction=(action openProfileOrMyStuff org)
      titleAction=(action "expandItem" org)
      expanded=(eq openItem org)
      data-test-component="organization-menu-item"
  }}
{{/each}}
