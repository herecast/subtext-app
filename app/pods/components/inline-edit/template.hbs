{{#if isEditing}}
  {{yield (hash
    isEditing=isEditing
    exitEditMode=(action exitEditMode)
    enterEditMode=(action enterEditMode)
  )}}
{{else}}
  {{#if valueWasGiven}}
    <span class='InlineEdit-display' onclick={{action (action enterEditMode)}}>
      {{{value}}}
      {{fa-icon 'pencil'}} <span class='u-link'>edit</span>
    </span>
  {{else}}
    {{yield (hash
      isEditing=isEditing
      exitEditMode=(action exitEditMode)
      enterEditMode=(action enterEditMode)
    )}}
  {{/if}}
{{/if}}
