{{#if (and displayWasGiven (not isEditing))}}
  {{!
    Display attribute is present, so lets display it if not in edit mode.
  }}
  {{{display}}}
  {{atoms/standard-button
      icon="pencil"
      class='InlineEdit-button InlineEdit-button--edit'
      action=(action enterEditMode)
      text='edit'
  }}
{{else}}
  {{!
    Either in edit mode, or display attribute wasn't given.
  }}
  {{yield (hash
    isEditing=isEditing
    exitEditMode=(action exitEditMode)
    enterEditMode=(action enterEditMode)
    okButton=(component "atoms/standard-button"
      action=(action exitEditMode)
      primary=true
      text="ok"
      class="InlineEdit-button InlineEdit-button--ok"
    )
    editButton=(component "atoms/standard-button"
      action=(action enterEditMode)
      text="edit"
      class="InlineEdit-button InlineEdit-button--edit"
    )
  )}}
{{/if}}
