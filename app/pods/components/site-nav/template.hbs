{{#if showAvatar}}
  <div class="SiteNav--avatar" {{action "toggleMenu"}} role="button" data-test-link="user-avatar">
    {{avatar-image
      imageUrl=currentUser.userImageUrl
      userName=currentUser.name
      customSize=30
      data-test-avatar-in-header=true
    }}
  </div>
{{else}}
  <div
    class="SiteNav--hamburger {{if notFastBoot "with-notification"}}"
    {{action "toggleMenu"}}
    role="button"
    data-test-sidenav-from-header="true"
  >
    {{fa-icon "navicon"}}
  </div>
{{/if}}


<div class="SiteNav--cover {{if showMenu "on-screen" "off-screen"}}" {{action "toggleMenu"}} role="button"></div>

{{site-nav/menu
  class=(if showMenu "on-screen" "off-screen")
  onClose=(action "toggleMenu")
  data-test-side-menu=true
}}
