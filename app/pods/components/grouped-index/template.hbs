<h1 class='GroupHeader GroupHeader--news'>
  {{#location-link 'news'
    class='GroupHeader-channelLink GroupHeader-channelLink--news h3'
    }}
    News &raquo;
  {{/location-link}}

  {{#location-link 'news' 
    class='GroupHeader-moreLink pull-right h5'}}
    view all
  {{/location-link}}
</h1>

<div class='row' data-row='row-1'>
  {{grouped-news
    news=newsItems
    adPath="location.index"
    showHeader=true
  }}
</div>

{{#if media.isMobile}}
  {{ad-banner impressionPath='index'}}
{{/if}}

<div class='row' data-row='row-2'>
  <div class="{{if hasTalkItems 'col-sm-5' 'col-sm-6'}}">
    <h1 class='GroupHeader GroupHeader--events'>
      {{#location-link 'events' class='GroupHeader-channelLink GroupHeader-channelLink--events h3'}}
        Events &raquo;
      {{/location-link}}

      {{#location-link 'events' class='GroupHeader-moreLink pull-right h5'}}
        view all
      {{/location-link}}
    </h1>

    <div class='Card-groupedWrapper'>
      {{#each eventItems as |event|}}
        {{event-card
          event=event
          closeRoute="index"
          flipImagePosition=true
          classNames='Card Card--event'
        }}
      {{/each}}

      <div class='CardGroupCTA'>
        <div class='CardGroupCTA-innerWrapper'>
          <div class='CardGroupCTA-pitch'>
            <p class='CardGroupCTA-pitch-title'>Want to see your Event on DailyUV?</p>
          </div>

          <div class='CardGroupCTA-cta'>
            {{#link-to 'events.new' class='Button Button--event CardGroupCTA-button' tagName='button'}}Create it now{{/link-to}}
            {{#location-link 'events' class='CardGroupCTA-link'}}or browse local events{{/location-link}}
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="{{if hasTalkItems 'col-sm-4' 'col-sm-6'}}">
    <h1 class='GroupHeader GroupHeader--market'>
      {{#location-link 'market' class='GroupHeader-channelLink GroupHeader-channelLink--market h3'}}
        Market &raquo;
      {{/location-link}}

      {{#location-link 'market' class='GroupHeader-moreLink pull-right h5'}}
        view all
      {{/location-link}}
    </h1>

    {{#each marketItems as |post|}}
      {{market-card
        classNames='Card Card--market'
        closeRoute="index"
        alignImageRightOnMobile=true
        post=post
      }}
    {{/each}}

    <div class='CardGroupCTA'>
      <div class='CardGroupCTA-innerWrapper'>
        <div class='CardGroupCTA-pitch'>
          <p class='CardGroupCTA-pitch-title'>Want to see your local Market Listing on DailyUV?</p>
        </div>

        <div class='CardGroupCTA-cta'>
          {{#link-to 'market.new' class='Button Button--market CardGroupCTA-button' tagName='button'}}Sell it now{{/link-to}}
          {{#location-link 'market' class='CardGroupCTA-link'}}or browse the market{{/location-link}}
        </div>
      </div>
    </div>
  </div>

  {{#if media.isMobile}}
    {{ad-banner impressionPath='location.index'}}
  {{/if}}

  {{#if hasTalkItems}}
  <div class='col-sm-3'>
    <h1 class='GroupHeader GroupHeader--talk'>
      {{#location-link 'talk' class='GroupHeader-channelLink GroupHeader-channelLink--talk h3'}}
        Talk &raquo;
      {{/location-link}}

      {{#location-link 'talk' class='GroupHeader-moreLink pull-right h5'}}
        view all
      {{/location-link}}
    </h1>

    {{#each sortedTalkItems as |talk|}}
      {{talk-card
        talk=talk
        closeRoute="index"
        outdentAvatar=false
        class='Card Card--talk'
      }}
    {{/each}}

    <div class='CardGroupCTA'>
      <div class='CardGroupCTA-innerWrapper'>
        <div class='CardGroupCTA-pitch'>
          <p class='CardGroupCTA-pitch-title'>Have something to add to the conversation?</p>
        </div>

        <div class='CardGroupCTA-cta'>
          {{#link-to 'talk.new' class='Button Button--talk CardGroupCTA-button' tagName='button'}}Start discussion{{/link-to}}
          {{#location-link 'talk' class='CardGroupCTA-link'}}or browse local conversations{{/location-link}}
        </div>
      </div>
    </div>
  </div>
  {{/if}}
</div>
