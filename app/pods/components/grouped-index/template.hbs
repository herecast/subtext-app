<h1 class='GroupHeader GroupHeader--news'>
  {{#link-to 'news' class='GroupHeader-moreLink GroupHeader-moreLink--news h3'}}
    News
  {{/link-to}}

  {{#link-to 'news' class='GroupHeader-moreLink pull-right h5'}}
    view all
  {{/link-to}}
</h1>

<div class='row' data-row='row-1'>
  {{#if media.isNotMobile}}
    <div class='col-sm-6'>
      {{#if newsItems.[0].imageUrl}}
        {{news-card-wide
          class='Card--solo'
          routeName='index.show'
          item=newsItems.[0]
          variant='full'
        }}
      {{else}}
        {{news-card-wide
          class='Card--solo Card--wide'
          routeName='index.show'
          item=newsItems.[0]
        }}
      {{/if}}
    </div>

    <div class='col-sm-3'>
      {{news-card
        item=newsItems.[1]
        routeName='index.show'
        variant='vertical'
      }}

      <div class='Card-wrapper--columnVertical2Up'>
        <div class='AdBanner-wrapper AdBanner-wrapper--index'>
          {{ad-banner impressionPath='index.index'}}
        </div>
      </div>
    </div>

    <div class='col-sm-3'>
     {{news-card
        item=newsItems.[2]
        routeName='index.show'
        variant='vertical'
      }}

      <div class='Card-wrapper--columnVertical2Up'>
        {{news-card item=newsItems.[3] routeName='index.show' }}
        {{news-card item=newsItems.[4] routeName='index.show' }}
      </div>
    </div>
  {{else}}

    <div class='col-sm-6'>
      {{#each newsItems as |newsItem index|}}
        {{#unless (eq index 3)}}
          {{news-card
            item=newsItem
            routeName='index.show'
            imagePosition='right'
            classNames='Card Card--news'
          }}
        {{else}}
          {{ad-banner impressionPath='index.index'}}
        {{/unless}}
      {{/each}}
    </div>
  {{/if}}
</div>

<div class='row' data-row='row-2'>
  <div class="{{if currentUser 'col-sm-5' 'col-sm-6'}}">
    <h1 class='GroupHeader GroupHeader--events'>
      {{#link-to 'events' class='GroupHeader-moreLink GroupHeader-moreLink--events h3'}}
        Events
      {{/link-to}}

      {{#link-to 'events' class='GroupHeader-moreLink pull-right h5'}}
        view all
      {{/link-to}}
    </h1>

    {{#each eventItems as |event|}}
      {{event-card
        event=event
        routeName='index.show'
        imagePosition=(if media.isNotMobile 'left' 'right')
        classNames='Card Card--event'
      }}
    {{/each}}
  </div>

  <div class="{{if currentUser 'col-sm-4' 'col-sm-6'}}">
    <h1 class='GroupHeader GroupHeader--market'>
      {{#link-to 'market' class='GroupHeader-moreLink GroupHeader-moreLink--market h3'}}
        Market
      {{/link-to}}

      {{#link-to 'market' class='GroupHeader-moreLink pull-right h5'}}
        view all
      {{/link-to}}
    </h1>

    {{#each marketItems as |post|}}
      {{market-card
        classNames='Card Card--market'
        routeName='index.show'
        imagePosition=(if media.isNotMobile 'left' 'right')
        post=post
      }}
    {{/each}}
  </div>

  {{#if currentUser}}
  <div class='col-sm-3'>
    <h1 class='GroupHeader GroupHeader--talk'>
      {{#link-to 'talk' class='GroupHeader-moreLink GroupHeader-moreLink--talk h3'}}
        Talk
      {{/link-to}}

      {{#link-to 'talk' class='GroupHeader-moreLink pull-right h5'}}
        view all
      {{/link-to}}
    </h1>

    {{#each talkItems as |talk|}}
      {{talk-card
        talk=talk
        routeName='index.show'
        class='Card Card--talk'
      }}
    {{/each}}
  </div>
  {{/if}}
</div>
