{{#if hasImage}}
  <div class='NewsCard-imageContainer u-textCentered'>
    <img class='NewsCard-image img-responsive' src={{item.imageUrl}}>
  </div>
{{/if}}

<div class='NewsCard-content u-flexColumn-2'>

  {{#link-to 'news.show' item.id data-test-link=item.title }}
    <div {{action 'trackClick' item}}>
      {{#if isSimilarContent}}
        <h2 {{action 'trackSimilarContentClick'}} class='Card-title u-twoLineH2'>
          {{item.title}}
        </h2>
      {{else}}
        <h2 class='Card-title u-twoLineH2'>
          {{item.title}}
        </h2>
      {{/if}}
    </div>
  {{/link-to}}

  <div class='NewsCard-subtitle'>
    <span class='NewsCard-date'>{{date}}</span>

    {{#link-to 'organization-profile' item.organization.slug data-test-component="organization-link"}}
      <h3 class='u-textTruncate NewsCard-organization'>{{item.organizationName}}</h3>
    {{/link-to}}
  </div>

  <div class='NewsCard-snippet u-textThreeLineTruncate'>
    {{{content}}}
  </div>
</div>
