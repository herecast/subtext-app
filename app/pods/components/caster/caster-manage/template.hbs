<div class="XButton XButton--light-gray XButton--regular XButton--x-small XButton--rounded">
  <div class="Caster-CasterManage--box">
    {{#link-to "caster" casterPageLinkId}}
      <div class="Caster-CasterManage--attribution">
        {{avatar-image
          imageUrl=casterAvatarImageUrl
          userName=casterName
          customSize=40
        }}

        <div class="Caster-CasterManage--attribution-name">
          <div class="Caster-CasterManage--attribution-name-name">
            {{casterName}}
          </div>
          <div class="Caster-CasterManage--attribution-name-handle">
            @{{casterHandle}}
          </div>
        </div>
      </div>
    {{/link-to}}

    <div>
      {{#if showFollowOptions}}
        <div class="Caster-CasterManage--subscribe">
          {{follow-button
            casterId=casterId
            updateCaster=false
          }}
        </div>
      {{else if showHideOptions}}
        {{#if wantsToUnhide}}
        <div class="Caster-CasterManage--message">
          Are you sure?
        </div>
        <div
          role="button"
          class="Caster-CasterManage--sure-button XButton XButton--medium-gray XButton--transparent  XButton--thin XButton--rounded XButton-nowrap"
          {{action "cancelUnhide"}}
        >
          No
        </div>
        <div
          role="button"
          class="Caster-CasterManage--sure-button XButton XButton--primary XButton--regular XButton--thin XButton--rounded XButton-nowrap"
          {{action "unhide"}}
        >
          Yes
        </div>
        {{else}}
          <div class="Caster-CasterManage--hide" role="button" {{action "clickedUnhideButton"}}>
            {{fa-icon "low-vision"}} Unhide
          </div>
        {{/if}}
      {{/if}}
    </div>
  </div>
</div>
