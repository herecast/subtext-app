{{#each displayedSchedules as |schedule|}}
    {{#if (eq schedule.repeats 'once')}}
      {{component 'event-schedules-editor/schedule-list/date-single-summary'
        schedule=schedule
        edit=editSchedule
        remove=removeSchedule
      }}
    {{else}}
      {{component 'event-schedules-editor/schedule-list/date-recurring-summary'
        schedule=schedule
        edit=editSchedule
        remove=removeSchedule
        excludeEvent=(action 'excludeEvent' schedule)
        includeEvent=(action 'includeEvent' schedule)
      }}
    {{/if}}
{{/each}}
