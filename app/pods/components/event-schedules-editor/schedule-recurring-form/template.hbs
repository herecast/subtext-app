<div class='EventForm-modalContainer clearfix'>
  <h2>Repeat</h2>

  {{#form-group class='row'}}
    {{#form-group
        errors=changeset.error.startDate.validation
        class='col-xs-12 col-sm-6'}}
      <label class='ContentForm-label--required'>Starts on</label>
        {{date-input
            value=changeset.startDate
            format='MM/DD/YYYY'
            placeholder='12/25/2020'
            update=(action (mut changeset.startDate))
        }}
    {{/form-group}}

    {{#form-group
        errors=changeset.error.stopDate.validation
        class='col-xs-12 col-sm-6'}}
      <label class='ContentForm-label--required'>Ends</label>
      {{date-input
          value=changeset.stopDate
          format='MM/DD/YYYY'
          placeholder='12/25/2020'
          update=(action (mut changeset.stopDate))
      }}
    {{/form-group}}
  {{/form-group}}

  <div class='form-group'>
    <label class='ContentForm-label--required'>Repeats</label>

    <div class='form-group'>
      <select onchange={{action 'selectRepeatType' value="target.value"}} class='form-control'>
        {{#each repeatTypes as |repeatChoice|}}
          <option value={{repeatChoice.value}} selected={{eq changeset.repeats repeatChoice.value}}>{{repeatChoice.key}}</option>
        {{/each}}
      </select>
    </div>

    {{#if weeklyOrBiWeekly}}
      {{#form-group errors=changeset.error.daysOfWeek.validation}}
        <label class='ContentForm-label--required'>On</label><br />
        <div class='ContentForm-checkboxGroup'>
          {{days-of-week-input
              selectedDays=(readonly changeset.daysOfWeek)
              update=(action (mut changeset.daysOfWeek))
          }}
        </div>
      {{/form-group}}

    {{else if (eq changeset.repeats 'daily')}}
      <p>Repeats every day.</p>

    {{else if (eq changeset.repeats 'monthly')}}
      {{textSummary}}
    {{/if}}
  </div>

  {{#form-group class='row'}}
    {{#form-group
        errors=changeset.error.startTime.validation
        class='col-xs-12 col-sm-6'}}
      <label class='ContentForm-label--required'>Start Time</label>
      {{time-input
          value=changeset.startTime
          format='h:mm a'
          placeholder='9:00 am'
          update=(action (mut changeset.startTime))
      }}
    {{/form-group}}

    {{#form-group
        errors=changeset.error.stopTime.validation
        class='col-xs-12 col-sm-6'}}
      <label>End Time</label>
      {{time-input
          value=changeset.stopTime
          format='h:mm a'
          placeholder='2:00 pm'
          update=(action (mut changeset.stopTime))
      }}
    {{/form-group}}
  {{/form-group}}

</div>
