{{#if hasBlock}}
  {{yield (hash
            radius-selector=(component "location-radius-selector"
              location=(readonly location)
              radius=(readonly radius)
              onChooseRadius=(action 'chooseRadius')
              onChooseLocation=(action 'chooseLocation')
            )

            nearby=(component 'locations-nearby'
              location=(readonly location)
              onNearbyLocationsChanged=onNearbyLocationsChanged
              radius=(readonly radius)
            )
          )
  }}
{{else}}
  {{location-radius-selector
    location=(readonly location)
    radius=(readonly radius)
    onChooseRadius=(action 'chooseRadius')
    onChooseLocation=(action 'chooseLocation')
  }}
  {{locations-nearby
    location=(readonly location)
    radius=(readonly radius)
    onNearbyLocationsChanged=onNearbyLocationsChanged
  }}
{{/if}}
