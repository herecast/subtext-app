{{#location-radius-control
  location=(readonly model.location)
  radius=(readonly model.promoteRadius)
  onChooseRadius=(action 'updateRadius')
  onChooseLocation=(action 'updateBaseLocation')
  noRadius=noRadius
as |location-control|}}

  {{location-control.radius-selector}}
  {{#unless noRadius}}
    {{#location-control.nearby as |nearby|}}
      {{#text-block small=true lighten=true}}
        This {{contentType}} post will be visible to DailyUV users in
        {{#if nearby.radius}}
          {{#if nearby.nearbyLocations}}
            {{#x-button style='link' strong=true onClick=nearby.showActiveLocations}}
              {{nearby.nearbyLocations.length}} nearest towns.
            {{/x-button}}
          {{/if}}
        {{else}}
          {{nearby.location.name}} only.
        {{/if}}
      {{/text-block}}
    {{/location-control.nearby}}
  {{/unless}}

{{/location-radius-control}}
