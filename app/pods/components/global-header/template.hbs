{{#if showNag}}
  {{global-header/app-download-nag
    onClose=(action "onCloseNag")
  }}
{{/if}}

<div class="GlobalHeader-wrap">
  <div class="GlobalHeader--top-bar {{if (or streamlinedHeader isFastBoot) "streamlined"}}">

    {{#if streamlinedHeader}}
      <div class="GlobalHeader-chevron">
        {{#link-to "welcome"}}
          <div class="GlobalHeader-chevron-left">
            {{fa-icon "chevron-left"}}
          </div>
          <div class="GlobalHeader-chevron-right">
            Change<br>
            Location
          </div>
        {{/link-to}}
      </div>
    {{/if}}

    <div class="GlobalHeader-brand">
      <div class="GlobalHeader-brand-logo">
        {{#link-to "feed" (query-params type=null)}}
          {{brand-logo white=true onClick=(action "logoClicked")}}
        {{/link-to}}
      </div>
    </div>


    <div class="GlobalHeader-filter">
      {{#if doNotHideFilters}}
        <div class="GlobalHeader-filter-postsButton GlobalHeader-filter-button">
          {{#link-to "feed" (query-params type="posts")}}
            {{fa-icon "newspaper-o" class=(if postsIsActive "active")}}
          {{/link-to}}

          {{#if postsIsActive}}
            <div class="GlobalHeader-filter-button-explainer">
              Posts
            </div>
          {{/if}}
        </div>
        <div class="GlobalHeader-filter-calendarButton GlobalHeader-filter-button">
          {{#link-to "feed" (query-params type="calendar")}}
            {{fa-icon "calendar" class=(if calendarIsActive "active")}}
          {{/link-to}}

          {{#if calendarIsActive}}
            <div class="GlobalHeader-filter-button-explainer">
              Calendar
            </div>
          {{/if}}
        </div>
        <div class="GlobalHeader-filter-marketButton GlobalHeader-filter-button">
          {{#link-to "feed" (query-params type="market")}}
            {{fa-icon "tags" class=(if marketIsActive "active")}}
          {{/link-to}}

          {{#if marketIsActive}}
            <div class="GlobalHeader-filter-button-explainer">
              Market
            </div>
          {{/if}}
        </div>
      {{/if}}
    </div>


    {{#if showNav}}
      <div class="GlobalHeader-menu">
        {{site-nav}}
      </div>
    {{/if}}
  </div>
</div>

{{yield}}
