<form data-test-component='registration-form'>
  {{#form-group error=error.name}}
    <label class='control-label'>Name</label>
    {{input
      value=name
      class='form-control'
      data-test-field='registration-form-name'
    }}
  {{/form-group}}

  {{#form-group error=error.email}}
    <label class='control-label'>Email</label>
    {{input
      value=email
      disabled=true
      class='form-control'
      data-test-field='registration-form-email'
    }}
  {{/form-group}}

  {{#form-group error=error.password}}
    <label class='control-label'>Password</label>
    {{input
      type='password'
      value=password
      class='form-control'
      autocomplete='off'
      data-test-field='registration-form-password'
    }}
    <span class='help-text'>(at least 8 characters)</span>
  {{/form-group}}

  {{#form-group error=error.locationId}}
    <label class='control-label'>Where do you live?</label>
    <div class='help-text visible-sm visible-xs'>
        So we can personalize your experience!
    </div>
    <div class='u-flexRow'>
      {{location-dropdown
          selectedLocationId=locationId
          data-test-component='registration-form-location'
          isEditing=true
          class="ListservForm-locationInput"
      }}
      {{#action-helper point="left" class='visible-md visible-lg'}}
        So we can personalize your experience!
      {{/action-helper}}
    </div>
  {{/form-group}}

  <p>
    By clicking below you agree to dailyUV's
    {{#link-to 'terms' class='u-textUnderline' target="_blank"}}
      Terms of Service
    {{/link-to}}
  </p>

  <div class='form-actions text-center'>
    {{async-button
      action=(action 'register')
      default=callToAction
      pending='Registering'
      class='ListservForm-callToAction'
      data-test-action='registration-form-submit'
    }}
  </div>

</form>
