{{#if hasImage}}
  <div class='NewsCard-imageContainer u-textCentered hidden-xs'>
    <img class='NewsCard-image img-responsive' src={{item.imageUrl}}>
  </div>
{{/if}}

<div class='NewsCard-content u-flexColumn-2'>

  {{#link-to 'news.show' item.id}}
    <div {{action 'trackClick' item}}>
      <h1 class='NewsCard-title Card-title u-twoLineH1'>
        {{item.title}}
      </h1>
    </div>
  {{/link-to}}

  <div class='NewsCard-subtitle'>
    {{#link-to 'organization-profile' item.organization.slug}}
      <h3 class='NewsCard-organization'>{{item.organizationName}}</h3>
    {{/link-to}}

    <span class='NewsCard-date'>{{date}}</span>
  </div>

  <div class='NewsCard-snippet u-textThreeLineTruncate'>
    {{{content}}}
  </div>
</div>
