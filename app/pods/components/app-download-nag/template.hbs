<div class="AppDownloadNag-close" {{action 'closeNag'}} data-test-action="close-nag">
  {{fa-icon 'close'}}
</div>
<div class="AppDownloadNag-wrap">
  <div class="AppDownloadNag-title">
    Download the DailyUV app today!
  </div>
  <div class="AppDownloadNag-images">
    <div class="AppDownloadNag-images-left">
      <img src={{appIcon.imageURL}} class="AppDownloadNag-images-logo" />
    </div>
    <div class="AppDownloadNag-images-center" {{action 'clickAppleStore' preventDefault=false}}>
      <a href={{appleStore.linkURL}} class="AppDownloadNag-images-apple" target="_blank">
        <img src={{appleStore.imageURL}} />
      </a>
    </div>
    <div class="AppDownloadNag-images-right" {{action 'clickAndroidStore' preventDefault=false}}>
      <a href={{androidStore.linkURL}} class="AppDownloadNag-images-android" target="_blank">
        <img src={{androidStore.imageURL}} />
      </a>
    </div>
  </div>

</div>
