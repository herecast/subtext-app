<div class="PromotionSection">
  <label class="PromotionSection-label" for="lists-enabled">Alert the List <span class="PromotionSection-cost">Free!</span></label>
  <p class="PromotionSection-description PromotionSection-description--emphasized">
    Send a text-only version of your comment to your home-community listserv with a link to your post.
    You need to be subscribed to the {{userLocation}} list ahead of time in order to do this.
    Click <a href="https://dailyuv.com/news/812457" target="_blank" rel="noopener noreferrer">here</a> for instructions on how to subscribe.
  </p>
  <div class="row">
    <div class="col-sm-2 col-sm-offset-2">
      <div {{action "toggleProperty" "listsEnabled"}} role="button" class="PromotionSection-toggle" data-test-listserv-toggle>
        {{#if listsEnabled}}
          {{fa-icon "toggle-on PromotionSection-toggleIcon is-on"}} On
        {{else}}
          {{fa-icon "toggle-off PromotionSection-toggleIcon"}} Off
        {{/if}}
      </div>
    </div>
    <div class="col-sm-8">
      {{#if listsEnabled}}
        {{content-form-listservs
          model=talk
          listservs=listservs
        }}
      {{/if}}
    </div>
  </div>
</div>

{{partials/promotion-disclaimer}}

<div class="ContentForm-buttonGroup form-group">
  <button class="Button btn btn-default pull-left ContentForm-button ContentForm-button--edit" {{action "back"}}>
    {{fa-icon "arrow-left u-iconLeft"}}
    Edit Talk
  </button>

  <button class="Button Button--primary btn btn-primary pull-right"
    data-test-action="next"
    {{action "preview"}}>
    Next Step
    {{fa-icon "arrow-right u-iconRight"}}
  </button>

  {{#if talk.isNew}}
    <button class="ContentForm-buttonLink ContentForm-discardButton h2 btn btn-link pull-right" {{action "discard"}}>
      {{fa-icon "trash u-iconLeft"}}
      Discard Talk
    </button>
  {{/if}}
</div>
