{{#if isMinimal}}
  <h2 class='Card-title' {{action 'onTitleClick'}}>
    {{#link-to 'market.all.show' post.id classNameBindings="isSimilarContent:SimilarContentLink"}}
      <span {{action 'trackSuggestedContentClick'}}>
        {{title}}
      </span>
    {{/link-to}}
  </h2>
  <span class='Card-subtitle'>{{post.price}} {{relativeDate}}</span>
{{else}}
  <div class="media">
    {{#unless (eq imagePosition 'right')}}
      <div class="media-left" >
        {{#if hasImage}}
          {{#market-post-link
            routeName=routeName
            category=category
            post=post
            onTitleClick=(action 'onTitleClick')
            trackSuggestedContentClick=(action 'trackSuggestedContentClick')
          }}
            <img class='Card-image-tile media-object' src={{post.coverImageUrl}} />
          {{/market-post-link}}
        {{/if}}
      </div>
    {{/unless}}

    <div class="media-body Card-content">
      <h2 class='Card-title'>
        {{#market-post-link
          routeName=routeName
          category=category
          post=post
          onTitleClick=(action 'onTitleClick')
          trackSuggestedContentClick=(action 'trackSuggestedContentClick')
        }}
          {{title}} {{#if post.sold}}<span class='u-tag'>SOLD!</span>{{/if}}
        {{/market-post-link}}
      </h2>

      <span class='Card-subtitle'>{{post.price}}</span><br>
      <span class='Card-subtitle'>{{relativeDate}}</span><br>

      {{#if post.myTownOnly}}
        <span class='Card-subtitle'>{{userLocation}} Only</span>
      {{/if}}
    </div>


    {{#if (eq imagePosition 'right')}}
      <div class="media-right" >
        {{#if hasImage}}
          {{#market-post-link
            routeName=routeName
            category=category
            post=post
            onTitleClick=(action 'onTitleClick')
            trackSuggestedContentClick=(action 'trackSuggestedContentClick')
          }}
            <img class='Card-image-tile media-object' src={{post.coverImageUrl}} />
          {{/market-post-link}}
        {{/if}}
      </div>
    {{/if}}
  </div>
{{/if}}
