{{#x-button-group xsBlockType='wide' class='LocationRadiusSelector-location'}}
  {{#x-button
    style=(if isMyStuffOnly 'outline' 'regular')
    color='primary' xsSize='x-small' onClick=(action 'chooseRadius' 0)
    data-test-radius=0 data-test-location-indicator=locaiton.id}}
      {{fa-icon 'location-arrow' class='hidden-xs'}}
      {{location.name}}
  {{/x-button}}
  {{#x-button
    style=(if isMyStuffOnly 'outline' 'regular')
    color='primary' xsSize='x-small' onClick=(action 'showLocationMenu')
    data-test-action='open-location-selector'}}
      {{fa-icon 'chevron-down'}}
  {{/x-button}}
{{/x-button-group}}

{{#each radiusChoices as |radiusChoice|}}
  {{#x-button color='primary'
              style=(if (or isMyStuffOnly (lt radius radiusChoice)) 'outline' 'regular')
              data-test-action='change-radius'
              data-test-radius=radiusChoice
              xsSize='x-small'
              xsBlockType='wide'
              onClick=(action 'chooseRadius' radiusChoice)
              disabled=radiusDisabled}}
    +{{radiusChoice}}
  {{/x-button}}
{{/each}}

{{#subtitle-text strong=true inline=true lighten=true class='LocationRadiusSelector-miles'}}
  miles
{{/subtitle-text}}
