{{truncatedText}}
{{#if isButtonVisible}}
  {{#x-button onClick=(action "toggleTruncatedText") size="medium" style="link" color="primary" nowrap=true}}
    {{#if isTextTruncated}}
      See more {{fa-icon "chevron-down"}}
    {{else}}
      See less {{fa-icon "chevron-up"}}
    {{/if}}
  {{/x-button}}
{{/if}}
