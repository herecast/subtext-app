{{#if isEditing}}
  {{#modal-wrapper close=(action 'cancel')}}
    {{component 'event-form-dates/schedule-single-form'
      schedule=schedule
      validate=attrs.validate
      save=attrs.save
      cancel=(action 'cancel')
    }}
  {{/modal-wrapper}}
{{/if}}

<a href='#' {{action 'remove' (action 'remove')}} class='pull-right'>{{fa-icon 'fa-trash'}} </a>
<p><b>Summary</b></p>
<p>Occurs one time on {{formatted-day schedule.startDate}}.</p>

<b>Date:</b> {{formatted-day schedule.startDate}}<br />
<b>Time:</b> {{schedule.startTime}}-{{schedule.stopTime}}<br />

<hr>

<button {{action 'remove' (action 'remove')}}>{{fa-icon 'close'}} remove</button>
<button {{action 'edit' (action 'edit')}}>{{fa-icon 'pencil'}} edit</button>
