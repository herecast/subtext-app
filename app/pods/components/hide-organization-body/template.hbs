{{#modal-wrapper
  showHeader=false
  isAnimated=true
  isSmall=true
  class="HideOrganizationButton--modal"
}}
  <div class="HideOrganizationButton--modal-organization">
    <div class="HideOrganizationButton--modal-organization-left">
      {{fa-icon "low-vision" class="HideOrganizationButton--modal-organization-icon"}}
      <div>Hide</div>
    </div>
    <div class="HideOrganizationButton--modal-organization-center">
      {{avatar-image
        imageUrl=organizationProfileImageUrl
        userName=organizationName
        customSize=40
        class="HideOrganizationButton--modal-organization-avatar"
      }}
    </div>
    <div class="HideOrganizationButton--modal-organization-right">
      {{organizationName}}
    </div>
  </div>


  {{#liquid-if (or showSuccess hasHiddenThisOrg) use="fade"}}
    <div class="alert alert-success" role="alert">
      You are hiding this contributor's posts from your feed. To unhide this contributor visit {{#link-to "mystuff.hides"}}My Stuff{{/link-to}}.
    </div>
  {{else}}

  <div class="HideOrganizationButton--modal-message">
    <p class="text-left u-paddingHorizontal8">
      This action will hide all posts created by this contributor in your feed.
    </p>
    <p class="text-left u-paddingHorizontal8">
      Why don't you want to see this contributor's posts?
      Your response is anonymous.
    </p>
  </div>

  {{#liquid-if isInvalid use="fade"}}
    <div class="alert alert-danger u-marginBottom0" role="alert">
      Please make a selection and try again.
    </div>
  {{/liquid-if}}

    <div class="HideOrganizationButton--modal-flags-wrap">
      <ul class="HideOrganizationButton--modal-flags">
        {{#each flagTypes as |flag|}}
          <li class="HideOrganizationButton--modal-flags-flag">
            {{#radio-button
              class="HideOrganizationButton--modal-flag-label"
              name="flag-type"
              value=flag
              groupValue=flagType
            }}
              {{flag}}
            {{/radio-button}}
          </li>
        {{/each}}
      </ul>
    </div>
  {{/liquid-if}}

  <div class="HideOrganizationButton--modal-action-buttons">
    {{#unless hasHiddenThisOrg}}
      {{#x-button
        color=(if hasFlagType "primary" "light-gray")
        rounded="rounded"
        size="x-small"
        onClick=(action "hide")
      }}
        Hide Contributor
      {{/x-button}}
    {{/unless}}

    {{#x-button
      color=(if showSuccess "primary" "light-gray")
      rounded="rounded"
      size="x-small"
      onClick=(action "close")
    }}
      {{if showSuccess "Close" "Cancel"}}
    {{/x-button}}
  </div>

{{/modal-wrapper}}
