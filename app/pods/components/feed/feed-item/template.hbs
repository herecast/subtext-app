{{#if isFeedContent}}
  {{#unless (is-equal feedItemModel.id showingDetailInFeed)}}
    {{feed-card
      model=feedItemModel
      organization=organization
      canManage=canManage
      displayAsPublic=displayAsPublic
      hideComments=hideComments
    }}
  {{/unless}}
{{else if isCarousel}}
  {{feed-carousel/carousel
    model=feedItemModel
    isSearchActive=isSearchActive
  }}
{{else if isOrganization}}
  {{#x-card}}
    {{cards/organization-profile-header
      organization=feedItemModel
      showGearButton=false
    }}
    {{cards/organization-contact
      organization=feedItemModel
    }}
  {{/x-card}}
{{/if}}
