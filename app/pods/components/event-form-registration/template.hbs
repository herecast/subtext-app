<label>
  Registration

  <span class='EventForm-toggle' {{action 'toggleRegistration'}}>
    No
    {{#if registrationEnabled}}
      {{fa-icon 'toggle-on is-on' size='lg'}}
    {{else}}
      {{fa-icon 'toggle-off' size='lg'}}
    {{/if}}
    Yes
  </span>
</label>
<div>
  {{#if registrationEnabled}}
    <div class='form-group'>
      <div class="input-group">
        <span class="ContentForm-iconLabel input-group-addon">
          {{fa-icon 'calendar'}}
        </span>
        {{pikaday-input
          firstDay=0
          value=date
          placeholder='Registration Deadline'
          class='form-control'
          format="MM/DD/YYYY"
          yearRange="currentYear,2010"
        }}
      </div>
    </div>
    <div class='form-group'>
      <div class="input-group">
        <span class="ContentForm-iconLabel input-group-addon">
          {{fa-icon 'link'}}
        </span>
        {{input
          placeholder='Link to register or buy tickets'
          class='form-control'
          value=event.registrationUrl
        }}
      </div>
    </div>
    <div class='form-group'>
      <div class="input-group">
        <span class="ContentForm-iconLabel input-group-addon">
          {{fa-icon 'envelope'}}
        </span>
        {{input
          placeholder='Register by email'
          class='form-control'
          value=event.registrationEmail
        }}
      </div>
    </div>
    <div class='form-group'>
      <div class="input-group">
        <span class="ContentForm-iconLabel input-group-addon">
          {{fa-icon 'phone'}}
        </span>
        {{input
          placeholder='Register by phone'
          class='form-control'
          value=event.registrationPhone
        }}
      </div>
    </div>
  {{else}}
    Does this event require registration?
  {{/if}}
</div>
