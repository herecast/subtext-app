{{#if (and modal isCurrentStep)}}
  {{#modal-wrapper isAnimated=false class=modalClass modalDialogStyle=modalDialogStyle style=modalStyle maintainBodyClass=true}}
    {{#if yieldBeforeAvatar}}
      <div class="BloggerIntro-Step-main">
        {{yield isCurrentStep}}
      </div>
    {{/if}}

    {{#if avatarUrl}}
      <div class="BloggerIntro-Step-avatar">
        <img src={{avatarUrl}} alt="Avatar">
      </div>
    {{/if}}

    {{#if title}}
      <div class="BloggerIntro-Step-title">
        {{title}}
      </div>
    {{/if}}

    {{#if subtitle}}
      <div class="BloggerIntro-Step-subtitle">
        {{subtitle}}
      </div>
    {{/if}}

    {{#unless hideYieldAfterAvatar}}
      <div class="BloggerIntro-Step-main">
        {{yield isCurrentStep}}
      </div>
    {{/unless}}

    {{#unless hideNavigation}}
      <div class="BloggerIntro-Step-nav">
        {{#if nextButton}}
          {{#x-button onClick=(action "skipToNextStep") color="primary" disabled=nextButtonDisabled}}
            {{nextButton}}
          {{/x-button}}
        {{/if}}

        {{#if actionButtonAction}}
          {{#x-button onClick=(action "actionButtonClick") color="attention" disabled=actionButtonDisabled}}
            {{actionButton}}
          {{/x-button}}
        {{/if}}

        {{#if confirmButton}}
          {{#x-button onClick=(action "confirmToNextStep") color="primary" disabled=confirmButtonDisabled}}
            {{#if confirmButtonIsLoading}}
              Checking {{fa-icon "cog" spin=true}}
            {{else}}
              {{confirmButton}}
            {{/if}}
          {{/x-button}}
        {{/if}}
      </div>

      {{#if innerStepButton}}
        <div class="BloggerIntro-Step-inner-button-bar">
          {{#x-button onClick=(action "innerStepButtonClick") color="secondary" disabled=innerStepButtonDisabled class="small"}}
            {{innerStepButton}}
          {{/x-button}}
        </div>
      {{/if}}

      <div class="BloggerIntro-Step-bullets">
        {{blogger-intro/bullets totalSteps=totalSteps currentStep=currentStep}}
      </div>
    {{/unless}}

    {{#unless hideHelpButton}}
      <div class="BloggerIntro-Step-help-bar">
        {{#help-text
          smallIcon=true
        }}
          Need help?
        {{/help-text}}
      </div>
    {{/unless}}

  {{/modal-wrapper}}
{{/if}}

{{#if (or replaceTooltip (not modal))}}
  {{yield isCurrentStep}}
{{/if}}
