{{#modal-wrapper class="Modal--no-padding" close=(action 'closeDetailPage') showHeader=false as |modal|}}
  {{#if (eq ctype 'news')}}
    {{news-detail
    model=model
    closeRoute='index'
    closeLabel='DailyUV'
    isPreview=false
    scrollTo=(action 'scrollTo' target=modal)
    }}
  {{else if (eq ctype 'event')}}
    {{event-detail
    model=model
    closeRoute='index'
    closeLabel='DailyUV'
    scrollTo=(action 'scrollTo' target=modal)
    }}
  {{else if (eq ctype 'market')}}
    {{market-detail
    model=model
    closeRoute='index'
    closeLabel='DailyUV'
    scrollTo=(action 'scrollTo' target=modal)
    }}
  {{else if (eq ctype 'talk')}}
    {{talk-detail
    model=model
    closeRoute='index'
    closeLabel='DailyUV'
    scrollTo=(action 'scrollTo' target=modal)
    }}
  {{/if}}
{{/modal-wrapper}}
