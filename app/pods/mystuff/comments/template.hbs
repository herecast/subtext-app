{{outlet}}

{{#if hasResults}}

  {{#each model as |comment|}}
    {{mystuff/comment-card comment=comment}}
  {{/each}}

{{else}}

  {{#x-card}}
    {{#card-body center=true shortPadding=true}}
      {{#text-block large=true strong=true}}
          It looks like you haven't left any comments yet.<br>
          Look for the comment bar at the bottom of everything in the feed and any detail page.<br>
      {{/text-block}}
    {{/card-body}}
  {{/x-card}}

{{/if}}
