{{outlet}}

{{#if model}}

  {{feed/card-size-chooser}}

  {{feed/index-feed
    feedItems=model
  }}

  {{#infinity-loader
    infinityModel=model
  }}
    {{#unless model.reachedInfinity}}
      {{fa-icon "spinner" class="fa-pulse"}}
    {{/unless}}
  {{/infinity-loader}}

{{else}}

  {{#x-card data-test-component="mystuff-contents-no-results"}}
    {{#card-body center=true shortPadding=true}}
      {{#text-block large=true strong=true}}
        You haven't liked any content yet.<br>
        Press the {{fa-icon "heart-o" class="FeedCard-Bookmark-button-icon"}} heart button on any content to get started!
      {{/text-block}}
    {{/card-body}}
  {{/x-card}}

{{/if}}
