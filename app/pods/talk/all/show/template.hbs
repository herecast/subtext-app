{{#modal-wrapper class="Modal--no-padding" close=(action 'closeTalkDetailPage') showHeader=false as |modal|}}
  {{#if (eq ctype 'news')}}
    {{news-detail
      model=model
      organizations=organizations
      closeRoute='talk.all'
      hasCaptionOrCredit=hasCaptionOrCredit
      isPreview=false
      scrollTo=(action "scrollTo" target=modal)
      scrollToAnchor=scrollTo
    }}
  {{else if (eq ctype 'event-instance')}}
    {{event-detail
      model=model
      closeRoute='talk.all'
      scrollTo=(action "scrollTo" target=modal)
      scrollToAnchor=scrollTo
    }}
  {{else if (eq ctype 'market-post')}}
    {{market-detail
      model=model
      closeRoute='talk.all'
    }}
  {{else if (eq ctype 'talk')}}
    {{talk-detail
      model=model
      closeRoute='talk.all'
      scrollTo=(action "scrollTo" target=modal)
      scrollToAnchor=scrollTo
    }}
  {{/if}}
{{/modal-wrapper}}
