{{#modal-wrapper class="Modal--no-padding" close=(action 'closeTalkDetailPage') willAnimateAway=true showHeader=false as |modal|}}
  {{#if (eq ctype 'news')}}
    {{news-detail
      model=model
      data-test-component='talk-detail'
      organizations=organizations
      closeRoute='talk.index'
      hasCaptionOrCredit=hasCaptionOrCredit
      isPreview=false
      scrollTo=(action "scrollTo" target=modal)
      scrollToAnchor=scrollTo
    }}
  {{else if (eq ctype 'event-instance')}}
    {{event-detail
      model=model
      closeRoute='talk.index'
      data-test-component='talk-detail'
      scrollTo=(action "scrollTo" target=modal)
      scrollToAnchor=scrollTo
    }}
  {{else if (eq ctype 'market-post')}}
    {{market-detail
      model=model
      closeRoute='talk.index'
      data-test-component='talk-detail'
    }}
  {{else if (eq ctype 'talk')}}
    {{talk-detail
      data-test-component='talk-detail'
      model=model
      closeRoute='talk.index'
      scrollTo=(action "scrollTo" target=modal)
      scrollToAnchor=scrollTo
    }}
  {{/if}}

  {{outreach-cta
    isButton=true
    placement='bottom-of-detail-talk'
    limitMessagesTo=2
    class="sit-center"
  }}

{{/modal-wrapper}}
