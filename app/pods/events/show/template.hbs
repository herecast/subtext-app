{{#modal-wrapper class="Modal--no-padding" close=(action 'closeEventDetailPage') willAnimateAway=true showHeader=false as |modal|}}
  {{event-detail
    data-test-component='event-detail'
    model=model
    scrollToAnchor=scrollToAnchor
    scrollTo=(action 'scrollTo' target=modal)
    instanceRoute='events.show'
    enableStickyHeader=true
  }}

  {{outreach-cta
    isButton=true
    placement='bottom-of-detail-events'
    limitMessagesTo=2
    class="sit-center"
  }}

{{/modal-wrapper}}
