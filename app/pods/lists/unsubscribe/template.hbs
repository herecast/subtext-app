<article class="ListservForm-container">
  <header class="ListservForm-header">
    <h1 class="uppercase-bold-condensed">
      HereCast
    </h1>
  </header>

  <div class="Container--noGutter">
    <div class="row">
      {{#listserv-form
        type="unsubscribe"
      }}

      <h3>
        Please enter your email address to unsubscribe
        from <strong>{{model.name}}</strong> digests.
      </h3>

      {{#form-group error=errors.email}}
        <label>Email</label>
        {{input class="form-control" type="email" value=email data-test-field="unsubscribe-email"}}
      {{/form-group}}

      <p>
        {{x-async-button
          class="Button Button--primary"
          promiseAction=(action "unsubscribe")
          default="Unsubscribe"
          pending="Unsubscribing..."
          fulfilled="Unsubscribe Complete"
          rejected="Please try again"
          data-test-component="unsubscribe-action"
        }}
      </p>

      {{/listserv-form}}
    </div>
  </div>
</article>
