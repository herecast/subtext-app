<article class="ListservForm-container">
  <header class='ListservForm-header u-layoutPadB20'>
    <h1 class='ListservForm-containerMainHeading h2 u-layoutPadB0'>
      Spruce It Up!
    </h1>
    <h2 class='h5 ListservForm-containerSubHeading u-layoutPadT0'>
      {{listservName}}/DailyUV
    </h2>
  </header>

  {{#if session.isFastBoot}}
    <div class='ListservForm text-center'>
      {{x-loader}}
    </div>
  {{else}}
    {{#if requiresSignIn}}
      <div class='ListservForm'>
        <div class='text-center'>
          <h3 class='h1 ListservForm-sectionHeader'>Your Post on the {{listservName}}</h3>
          <p>
            To Spruce Up your post, you need to sign in to your dailyUV account.
          </p>
        </div>
        <div class='text-center'>
            {{listserv-sign-in-form
                email=(readonly model.senderEmail)
                callToAction="SIGN IN"
                confirmationKey=confirmationKey
                forgotPasswordReturnUrl=forgotPasswordReturnUrl
                updateMetric=(action 'updateListservMetric' model.id 'user_sign_in')
                onSuccess=(action 'afterSignIn')
            }}
        </div>
      </div>
    {{else}}
      {{outlet}}
    {{/if}}
  {{/if}}
</article>
