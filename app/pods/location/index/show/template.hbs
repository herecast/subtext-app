{{#if session.startedOnIndexRoute}}
  {{#modal-wrapper class="Modal--no-padding" close=(action 'closeDetailPage') willAnimateAway=true showHeader=false as |modal|}}
    {{component componentName
      model=model
      closeRoute='location.index'
      closeLabel='Back'
      isPreview=false
      scrollTo=(action 'scrollTo' target=modal)
      enableStickyHeader=true
    }}

  {{/modal-wrapper}}
{{else}}

  <div class="Location-Index-Show-wrapper">
    {{component componentName
      model=model
      closeRoute='location.index'
      closeLabel='Back'
      isPreview=false
    }}
  </div>

  {{inviewport-reporter
    reportScrollInto=true
    reportOnce=true
    callback=(action 'scrolledPastDetail' model.id)
  }}

{{/if}}
