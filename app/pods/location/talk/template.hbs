<div data-test-page='location.talk'>
  {{#channel-filters channel='talk'}}
    {{location-radius-control
      location=(readonly userLocation.location)
      radius=(readonly radius)
      onChooseRadius=(action "changeRadius")
      onChooseLocation=(action 'chooseLocation')
    }}
  {{/channel-filters}}
  <div class='Container--noGutter'>
    <div class='row'>
      <div class='col-xs-12 col-md-8 col-md-push-2'>
        <div class='ChannelTopper clearfix'>
          <h1 class='GroupHeader GroupHeader--talk' style='display: inline-block; margin-bottom: 0'>
            <span class='GroupHeader-channelLink GroupHeader-channelLink--talk h3 ChannelTopper-title'>
              Local Talk
            </span>
          </h1>

          {{#unless features.disable-content-creation}}
            <div data-test-component='content-create-button' class='SectionNavigation-contentCreateButtonMobile pull-right'>
              {{#link-to 'talk.new.details' class='Button SectionNavigation-contentCreateButton btn btn-default Button--talk' data-test-link='content-create-button'}}
                <span class="visible-xs-inline visible-sm-inline">+</span>
                <span class="hidden-xs hidden-sm">Create</span>
                Talk
              {{/link-to}}
            </div>
          {{/unless}}
          <div class="hidden-xs">
            {{partial 'partials/pagination-nav'}}
          </div>
        </div>
      </div>
    </div>
  </div>


  {{#if model}}
    {{sorted-talks
      talks=model
      adPath='location.talk'
    }}
    <div class='Container--noGutter'>
      <div class='row'>
        <div class='col-xs-12 col-md-8 col-md-push-2'>
          <div class='PaginationNav-wrapper'>
            <div class='PaginationNav PaginationNav--bottom'>
              {{partial 'partials/pagination-nav'}}
            </div>
          </div>
        </div>
      </div>
    </div>
  {{else}}
    <div class='Container--noGutter'>
      <h4 class="NothingFound u-textCentered">
        Nothing here! Add distance to see more posts.
      </h4>
    </div>
  {{/if}}

  {{outlet}}

  {{outreach-cta
    isButton=true
    placement='bottom-of-page'
    limitMessagesTo=2
    class="sit-center"
  }}
</div>
