{{#unless isDirectLink}}

  {{render-in-modal
      (component componentName
        model=model
        closeRoute='feed'
        closeLabel='Back'
        isPreview=false
        enableStickyHeader=true
        trackDetailEngagement=(action 'trackDetailEngagement' model.id 'modal')
      )
      onClose=(action 'closeDetailPage')
      modalWrapper='modals/headless-wrapper'
      model=model
  }}

{{else}}

  <div class="Location-Index-Show-wrapper">
    {{component componentName
      model=model
      closeRoute='feed'
      closeLabel='Back'
      isPreview=false
      trackDetailEngagement=(action 'trackDetailEngagement' model.id 'integrated')
    }}
  </div>

{{/unless}}
