{{#modal-wrapper class="Modal--no-padding" close=(action 'closeNewsDetailPage') willAnimateAway=true showHeader=false as |modal|}}
  {{news-detail
    data-test-component='news-detail'
    model=model
    isPreview=false
    scrollToAnchor=scrollToAnchor
    scrollTo=(action "scrollTo" target=modal)
    enableStickyHeader=true
  }}

  {{outreach-cta
    isButton=true
    placement='bottom-of-detail-news'
    limitMessagesTo=2
    class="sit-center"
  }}

{{/modal-wrapper}}
